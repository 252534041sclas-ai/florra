<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9fafb"
    android:fitsSystemWindows="true">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#f9fafb"
        android:elevation="4dp">

        <!-- Status Bar Spacer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:background="#f9fafb" />

        <!-- Toolbar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:gravity="center_vertical"
            android:background="#f9fafb">

            <!-- Back Button -->
            <RelativeLayout
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_back"
                    android:tint="@color/black"
                    android:layout_centerInParent="true" />
            </RelativeLayout>

            <!-- Title -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Change Password"
                android:textColor="#171717"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingEnd="48dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:layout_above="@+id/bottomButton"
        android:fillViewport="true"
        android:paddingHorizontal="16dp"
        android:paddingTop="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Current Password Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <!-- Label -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current Password"
                    android:textColor="#171717"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:layout_marginBottom="8dp" />

                <!-- Password Input Container -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/bg_password_input"
                    android:paddingStart="15dp">

                    <!-- Lock Icon -->
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_lock"
                        android:tint="#737373"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true" />

                    <!-- Password Input -->
                    <EditText
                        android:id="@+id/etCurrentPassword"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="40dp"
                        android:layout_marginEnd="56dp"
                        android:hint="Enter current password"
                        android:inputType="textPassword"
                        android:background="@android:color/transparent"
                        android:padding="0dp"
                        android:textColor="#171717"
                        android:textSize="16sp"
                        android:textColorHint="#737373" />

                    <!-- Toggle Visibility Button -->
                    <RelativeLayout
                        android:id="@+id/btnToggleCurrentPassword"
                        android:layout_width="56dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:background="?selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:id="@+id/ivCurrentPasswordVisibility"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_menu_view"
                            android:tint="#737373"
                            android:layout_centerInParent="true" />
                    </RelativeLayout>
                </RelativeLayout>

                <!-- Forgot Password Link -->
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/tvForgotPassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Forgot current password?"
                        android:textColor="#737373"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="8dp" />
                </RelativeLayout>
            </LinearLayout>

            <!-- New Password Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <!-- Label -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Password"
                    android:textColor="#171717"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:layout_marginBottom="8dp" />

                <!-- Password Input Container -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/bg_password_input"
                    android:paddingStart="15dp">

                    <!-- Lock Open Icon - Using different icon since ic_lock_open not available -->
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_lock"
                        android:tint="#737373"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true" />

                    <!-- Password Input -->
                    <EditText
                        android:id="@+id/etNewPassword"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="40dp"
                        android:layout_marginEnd="56dp"
                        android:hint="Enter new password"
                        android:inputType="textPassword"
                        android:background="@android:color/transparent"
                        android:padding="0dp"
                        android:textColor="#171717"
                        android:textSize="16sp"
                        android:textColorHint="#737373" />

                    <!-- Toggle Visibility Button -->
                    <RelativeLayout
                        android:id="@+id/btnToggleNewPassword"
                        android:layout_width="56dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:background="?selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:id="@+id/ivNewPasswordVisibility"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_menu_view"
                            android:tint="#737373"
                            android:layout_centerInParent="true" />
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>

            <!-- Password Requirements Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#0000000d"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <!-- Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PASSWORD REQUIREMENTS"
                    android:textColor="#171717"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.05"
                    android:layout_marginBottom="12dp" />

                <!-- Requirements List -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- At least 8 characters -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:id="@+id/ivRequirement1"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@android:drawable/presence_online"
                            android:tint="#171717"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="At least 8 characters"
                            android:textColor="#737373"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Contains at least 1 number -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:id="@+id/ivRequirement2"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@android:drawable/radiobutton_off_background"
                            android:tint="#e5e5e5"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Contains at least 1 number"
                            android:textColor="#737373"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Contains at least 1 uppercase letter -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivRequirement3"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@android:drawable/radiobutton_off_background"
                            android:tint="#e5e5e5"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Contains at least 1 uppercase letter"
                            android:textColor="#737373"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Confirm New Password Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <!-- Label -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Confirm New Password"
                    android:textColor="#171717"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:layout_marginBottom="8dp" />

                <!-- Password Input Container -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/bg_password_input"
                    android:paddingStart="15dp">

                    <!-- Lock Open Icon - Using different icon since ic_lock_open not available -->
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_lock"
                        android:tint="#737373"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true" />

                    <!-- Password Input -->
                    <EditText
                        android:id="@+id/etConfirmPassword"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="40dp"
                        android:layout_marginEnd="56dp"
                        android:hint="Re-enter new password"
                        android:inputType="textPassword"
                        android:background="@android:color/transparent"
                        android:padding="0dp"
                        android:textColor="#171717"
                        android:textSize="16sp"
                        android:textColorHint="#737373" />

                    <!-- Toggle Visibility Button -->
                    <RelativeLayout
                        android:id="@+id/btnToggleConfirmPassword"
                        android:layout_width="56dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:background="?selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:id="@+id/ivConfirmPasswordVisibility"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_menu_view"
                            android:tint="#737373"
                            android:layout_centerInParent="true" />
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>

            <!-- Bottom Spacer -->
            <View
                android:layout_width="match_parent"
                android:layout_height="80dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Update Password Button -->
    <LinearLayout
        android:id="@+id/bottomButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#f9fafb"
        android:layout_alignParentBottom="true"
        android:elevation="8dp"
        android:paddingHorizontal="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="16dp">

        <!-- Button -->
        <RelativeLayout
            android:id="@+id/btnUpdatePassword"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/bg_update_button"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update Password"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <!-- Bottom Safe Area Spacer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />
    </LinearLayout>

</RelativeLayout>