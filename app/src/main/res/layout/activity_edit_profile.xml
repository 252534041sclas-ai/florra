<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/calc_gray_50"
    android:fitsSystemWindows="true">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:elevation="4dp"
        android:layout_alignParentTop="true">

        <!-- Status Bar Spacer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:background="@color/white" />

        <!-- Toolbar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:gravity="center_vertical"
            android:background="@color/white">

            <!-- Back Button -->
            <RelativeLayout
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_back"
                    android:tint="@color/black"
                    android:layout_centerInParent="true" />
            </RelativeLayout>

            <!-- Title -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Edit Profile"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:letterSpacing="-0.01" />

            <!-- Cancel Button -->
            <RelativeLayout
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:paddingHorizontal="8dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"/>
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_200" />
    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:layout_above="@+id/saveButtonContainer"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="80dp">

            <!-- Profile Photo Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:paddingVertical="32dp">

                <!-- Profile Image Container -->
                <RelativeLayout
                    android:id="@+id/btnChangePhoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true">

                    <!-- Profile Image -->
                    <RelativeLayout
                        android:layout_width="128dp"
                        android:layout_height="128dp"
                        android:background="@drawable/bg_profile_circle_edit">

                        <!-- Profile Image -->
                        <ImageView
                            android:id="@+id/ivProfile"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_person_large"
                            android:scaleType="centerCrop"
                            android:contentDescription="Profile Image"
                            android:tint="@color/gray_400" />
                    </RelativeLayout>

                    <!-- Camera Icon Overlay -->
                    <RelativeLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_camera_circle"
                        android:layout_alignBottom="@id/btnChangePhoto"
                        android:layout_alignRight="@id/btnChangePhoto"
                        android:layout_marginBottom="-4dp"
                        android:layout_marginRight="-4dp"
                        android:elevation="8dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_camera"
                            android:tint="@color/white"
                            android:layout_centerInParent="true" />
                    </RelativeLayout>
                </RelativeLayout>

                <!-- Change Photo Text -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CHANGE PHOTO"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.05"
                    android:layout_marginTop="16dp"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>

            <!-- Form Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp">

                <!-- Full Name -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Full Name"
                        android:textColor="@color/gray_700"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.05"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="4dp" />

                    <!-- Input Field with Icon -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/bg_input_field">

                        <!-- Person Icon -->
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_person_outline"
                            android:tint="@color/gray_400"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="16dp" />

                        <!-- EditText -->
                        <EditText
                            android:id="@+id/etFullName"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingLeft="56dp"
                            android:paddingRight="16dp"
                            android:text="Alex Morgan"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:background="@android:color/transparent"
                            android:maxLines="1"
                            android:inputType="textPersonName" />
                    </RelativeLayout>
                </LinearLayout>

                <!-- Email Address -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email Address"
                        android:textColor="@color/gray_700"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.05"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="4dp" />

                    <!-- Input Field with Icon -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/bg_input_field">

                        <!-- Mail Icon -->
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_mail"
                            android:tint="@color/gray_400"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="16dp" />

                        <!-- EditText -->
                        <EditText
                            android:id="@+id/etEmail"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingLeft="56dp"
                            android:paddingRight="56dp"
                            android:text="alex.morgan@florra.design"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:background="@android:color/transparent"
                            android:maxLines="1"
                            android:inputType="textEmailAddress" />

                        <!-- Verified Check Icon -->
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_check_circle"
                            android:tint="@color/black"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="16dp" />
                    </RelativeLayout>
                </LinearLayout>

                <!-- Mobile Number -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mobile Number"
                        android:textColor="@color/gray_700"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.05"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="4dp" />

                    <!-- Country Code + Phone Number -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <!-- Country Code -->
                        <RelativeLayout
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_input_field"
                            android:layout_marginRight="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="+1"
                                android:textColor="@color/gray_700"
                                android:textSize="16sp"
                                android:layout_centerInParent="true"
                                android:textStyle="normal" />
                        </RelativeLayout>

                        <!-- Phone Number Input -->
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/bg_input_field">

                            <!-- Phone Icon -->
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_smartphone"
                                android:tint="@color/gray_400"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="16dp" />

                            <!-- EditText -->
                            <EditText
                                android:id="@+id/etMobile"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingLeft="56dp"
                                android:paddingRight="16dp"
                                android:text="(555) 123-4567"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:background="@android:color/transparent"
                                android:maxLines="1"
                                android:inputType="phone" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Save Changes Button Container -->
    <LinearLayout
        android:id="@+id/saveButtonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_above="@id/bottomNav"
        android:elevation="4dp">

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_200" />

        <!-- Save Button -->
        <RelativeLayout
            android:id="@+id/btnSaveChanges"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/bg_save_button"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save Changes"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_centerInParent="true" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_bottom_nav"
        android:layout_alignParentBottom="true"
        android:elevation="8dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:background="@color/white" />
    </LinearLayout>

</RelativeLayout>