<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:fitsSystemWindows="true">

    <!-- Pattern Background -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_light" />

    <!-- Main container -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Card container -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxWidth="420dp"
                android:background="@color/white"
                android:backgroundTint="@color/white"
                android:elevation="8dp"
                android:clipToPadding="false"
                android:clipChildren="false"
                android:layout_marginBottom="24dp">

                <!-- Header with background image -->
                <RelativeLayout
                    android:id="@+id/headerContainer"
                    android:layout_width="match_parent"
                    android:layout_height="192dp"
                    android:background="@color/black"
                    android:padding="24dp">

                    <!-- Gradient overlay -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_header_gradient" />

                    <!-- Logo and title -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentStart="true"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:spacing="12dp">

                        <!-- Logo icon -->
                        <RelativeLayout
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@color/white"
                            android:backgroundTint="@color/white"
                            android:elevation="4dp"
                            android:radius="8dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_grid_view"
                                android:tint="@color/black"
                                android:scaleType="center"
                                android:layout_centerInParent="true" />

                        </RelativeLayout>

                        <!-- App name -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Florra"
                                android:textColor="@color/white"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:letterSpacing="-0.02" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tile Designs and Shop management"
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                android:alpha="0.8"
                                android:textStyle="normal" />

                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

                <!-- Content area -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/headerContainer"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Title -->
                    <TextView
                        android:id="@+id/txtTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Forgot Password?"
                        android:textColor="@color/black"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:letterSpacing="-0.02"
                        android:lineSpacingExtra="4sp"
                        android:layout_marginBottom="8dp" />

                    <!-- Description -->
                    <TextView
                        android:id="@+id/txtDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Don't worry, it happens. Please enter the email associated with your account to receive a reset link."
                        android:textColor="@color/gray_500"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:lineSpacingExtra="6sp"
                        android:layout_marginBottom="32dp"
                        android:paddingHorizontal="8dp" />

                    <!-- Email input -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="24dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email address"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"
                            android:layout_marginStart="4dp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@drawable/bg_input_field_forgot"
                            android:elevation="2dp">

                            <ImageView
                                android:id="@+id/iconMail"
                                android:layout_width="48dp"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_mail"
                                android:tint="@color/gray_400"
                                android:scaleType="center" />

                            <EditText
                                android:id="@+id/edtEmail"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="48dp"
                                android:layout_marginEnd="16dp"
                                android:hint="ex: showroom@florra.com"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:inputType="textEmailAddress"
                                android:background="@android:color/transparent"
                                android:paddingVertical="0dp"
                                android:paddingHorizontal="0dp"
                                android:maxLines="1" />

                        </RelativeLayout>

                    </LinearLayout>

                    <!-- Send Reset Link button -->
                    <Button
                        android:id="@+id/btnSendResetLink"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Send Reset Link"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:background="@drawable/bg_black_button"
                        android:textAllCaps="false"
                        android:letterSpacing="0.015"
                        android:layout_marginBottom="16dp"
                        android:elevation="2dp" />

                    <!-- Back to Login button -->
                    <Button
                        android:id="@+id/btnBackToLogin"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Back to Login"
                        android:textColor="@color/gray_500"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:background="@android:color/transparent"
                        android:textAllCaps="false"
                        android:drawableStart="@drawable/ic_arrow_back_small"
                        android:drawablePadding="6dp"
                        android:gravity="center" />

                </LinearLayout>

            </RelativeLayout>

            <!-- Version info -->
            <TextView
                android:id="@+id/txtAppVersion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Florra Showroom Utility App v2.0"
                android:textColor="@color/gray_400"
                android:textSize="12sp"
                android:layout_marginTop="8dp" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>