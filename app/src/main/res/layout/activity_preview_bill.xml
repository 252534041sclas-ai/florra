<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f8"
    android:fitsSystemWindows="true">

    <!-- Top Header -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:elevation="4dp"
        android:layout_alignParentTop="true">

        <!-- Back Button -->
        <LinearLayout
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â†"
                android:textColor="#111118"
                android:textSize="20sp" />

        </LinearLayout>

        <!-- Title -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Bill Preview"
            android:textColor="#111118"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingEnd="40dp" />

    </LinearLayout>

    <!-- Main Content ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerLayout"
        android:layout_above="@id/bottomLayout"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Bill Container Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#ffffff"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Top Green Bar -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#000000" />

                    <!-- Company Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp"
                        android:layout_marginTop="2dp"
                        android:background="?attr/selectableItemBackground">

                        <!-- Company Info Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <!-- Logo/Icon -->
                            <LinearLayout
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="#00000010"
                                android:gravity="center"
                                android:padding="8dp"
                                android:layout_marginEnd="12dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="â—¼"
                                    android:textColor="#000000"
                                    android:textSize="24sp" />

                            </LinearLayout>

                            <!-- Company Details -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Florra Tiles Studio"
                                    android:textColor="#000000"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:layout_marginBottom="4dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="123 Design Avenue, Metro City"
                                    android:textColor="#636388"
                                    android:textSize="12sp"
                                    android:layout_marginBottom="2dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="GSTIN: 29ABCDE1234F125"
                                    android:textColor="#636388"
                                    android:textSize="12sp" />

                            </LinearLayout>

                            <!-- Authorized Dealer Badge -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Authorized Dealer"
                                android:textColor="#166534"
                                android:textSize="10sp"
                                android:textStyle="bold"
                                android:background="#dcfce7"
                                android:paddingHorizontal="8dp"
                                android:paddingVertical="4dp"
                                android:gravity="center" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Bill No and Date -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="#f6f6f8"
                        android:padding="16dp"
                        android:id="@+id/billInfoLayout">

                        <!-- Bill No -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="BILL NO"
                                android:textColor="#636388"
                                android:textSize="10sp"
                                android:textStyle="bold"
                                android:letterSpacing="0.1"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:id="@+id/tvBillNo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="#INV-2024-001"
                                android:textColor="#111118"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <!-- Date -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="end">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="DATE"
                                android:textColor="#636388"
                                android:textSize="10sp"
                                android:textStyle="bold"
                                android:letterSpacing="0.1"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:id="@+id/tvDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Oct 24, 2023"
                                android:textColor="#111118"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Bill To Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp"
                        android:layout_below="@id/billInfoLayout"
                        android:id="@+id/billToLayout">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BILL TO"
                            android:textColor="#636388"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.1"
                            android:layout_marginBottom="12dp" />

                        <!-- Customer Details -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <!-- Person Icon -->
                            <TextView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:text="ðŸ‘¤"
                                android:textSize="16sp"
                                android:layout_marginEnd="12dp" />

                            <!-- Customer Info -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvCustomerName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Mr. Rajesh Kumar"
                                    android:textColor="#111118"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:layout_marginBottom="4dp" />

                                <TextView
                                    android:id="@+id/tvCustomerPhone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="+91 98765 43210"
                                    android:textColor="#636388"
                                    android:textSize="12sp"
                                    android:layout_marginBottom="2dp" />

                                <TextView
                                    android:id="@+id/tvCustomerAddress"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="45 Green Park, Near Central Mall, Metro City, 560001"
                                    android:textColor="#636388"
                                    android:textSize="12sp"
                                    android:lineSpacingExtra="2dp" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Items Table Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="#f9fafb"
                        android:paddingHorizontal="24dp"
                        android:paddingVertical="12dp"
                        android:layout_below="@id/billToLayout"
                        android:id="@+id/tableHeader">

                        <!-- Item Column -->
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:text="Item"
                            android:textColor="#636388"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.1" />

                        <!-- Qty Column -->
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Qty"
                            android:textColor="#636388"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.1"
                            android:gravity="center" />

                        <!-- Rate Column -->
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Rate"
                            android:textColor="#636388"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.1"
                            android:gravity="end" />

                        <!-- Amount Column -->
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Amount"
                            android:textColor="#636388"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.1"
                            android:gravity="end" />

                    </LinearLayout>

                    <!-- Item 1 Row -->
                    <LinearLayout
                        android:id="@+id/tableRow1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingHorizontal="24dp"
                        android:paddingVertical="16dp"
                        android:layout_below="@id/tableHeader"
                        android:background="?attr/selectableItemBackground">

                        <!-- Item Details -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvItem1Name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Carrara Marble Glossy"
                                android:textColor="#111118"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="2dp" />

                            <TextView
                                android:id="@+id/tvItem1Details"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="600x600mm â€¢ Vitrified"
                                android:textColor="#636388"
                                android:textSize="11sp" />

                        </LinearLayout>

                        <!-- Quantity -->
                        <TextView
                            android:id="@+id/tvItem1Qty"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="10 box"
                            android:textColor="#111118"
                            android:textSize="13sp"
                            android:gravity="center" />

                        <!-- Rate -->
                        <TextView
                            android:id="@+id/tvItem1Rate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="$12.00"
                            android:textColor="#111118"
                            android:textSize="13sp"
                            android:gravity="end" />

                        <!-- Amount -->
                        <TextView
                            android:id="@+id/tvItem1Amount"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="$120.00"
                            android:textColor="#111118"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:gravity="end" />

                    </LinearLayout>

                    <!-- Item 2 Row -->
                    <LinearLayout
                        android:id="@+id/tableRow2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingHorizontal="24dp"
                        android:paddingVertical="16dp"
                        android:layout_below="@id/tableRow1"
                        android:background="?attr/selectableItemBackground">

                        <!-- Item Details -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvItem2Name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rustic Wood Plank"
                                android:textColor="#111118"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="2dp" />

                            <TextView
                                android:id="@+id/tvItem2Details"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="200x1000mm â€¢ Ceramic"
                                android:textColor="#636388"
                                android:textSize="11sp" />

                        </LinearLayout>

                        <!-- Quantity -->
                        <TextView
                            android:id="@+id/tvItem2Qty"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="5 box"
                            android:textColor="#111118"
                            android:textSize="13sp"
                            android:gravity="center" />

                        <!-- Rate -->
                        <TextView
                            android:id="@+id/tvItem2Rate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="$9.00"
                            android:textColor="#111118"
                            android:textSize="13sp"
                            android:gravity="end" />

                        <!-- Amount -->
                        <TextView
                            android:id="@+id/tvItem2Amount"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="$45.00"
                            android:textColor="#111118"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:gravity="end" />

                    </LinearLayout>

                    <!-- Item 3 Row -->
                    <LinearLayout
                        android:id="@+id/tableRow3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingHorizontal="24dp"
                        android:paddingVertical="16dp"
                        android:layout_below="@id/tableRow2"
                        android:background="?attr/selectableItemBackground">

                        <!-- Item Details -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvItem3Name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Adhesive Type-2"
                                android:textColor="#111118"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="2dp" />

                            <TextView
                                android:id="@+id/tvItem3Details"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="20kg Bag"
                                android:textColor="#636388"
                                android:textSize="11sp" />

                        </LinearLayout>

                        <!-- Quantity -->
                        <TextView
                            android:id="@+id/tvItem3Qty"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="2 bag"
                            android:textColor="#111118"
                            android:textSize="13sp"
                            android:gravity="center" />

                        <!-- Rate -->
                        <TextView
                            android:id="@+id/tvItem3Rate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="$8.00"
                            android:textColor="#111118"
                            android:textSize="13sp"
                            android:gravity="end" />

                        <!-- Amount -->
                        <TextView
                            android:id="@+id/tvItem3Amount"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="$16.00"
                            android:textColor="#111118"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:gravity="end" />

                    </LinearLayout>

                    <!-- Summary Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp"
                        android:layout_below="@id/tableRow3"
                        android:id="@+id/summaryLayout"
                        android:background="#f9fafb">

                        <!-- Subtotal -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Subtotal"
                                android:textColor="#636388"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tvSubtotal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$181.00"
                                android:textColor="#111118"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <!-- Tax -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Tax (10% GST)"
                                android:textColor="#636388"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tvTaxAmount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$18.10"
                                android:textColor="#111118"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <!-- Discount -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Discount"
                                android:textColor="#166534"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tvDiscountAmount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-$5.00"
                                android:textColor="#166534"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <!-- Divider -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#e5e7eb"
                            android:layout_marginBottom="12dp" />

                        <!-- Grand Total -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Grand Total"
                                android:textColor="#111118"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvGrandTotal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$194.10"
                                android:textColor="#000000"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Terms & Conditions -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="24dp"
                        android:layout_below="@id/summaryLayout"
                        android:id="@+id/termsLayout">

                        <!-- Terms -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginEnd="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Terms &amp; Conditions"
                                android:textColor="#111118"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1. Goods once sold will not be taken back.\n2. Subject to Metro City jurisdiction only."
                                android:textColor="#636388"
                                android:textSize="11sp"
                                android:lineSpacingExtra="4dp"
                                android:layout_marginBottom="12dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Thank you for your business"
                                android:textColor="#111118"
                                android:textSize="12sp"
                                 android:textStyle="italic" />

                        </LinearLayout>

                        <!-- Signature -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="end|bottom">

                            <!-- Dashed Line -->
                            <View
                                android:layout_width="128dp"
                                android:layout_height="1dp"
                                android:background="@drawable/dashed_line"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Authorized Signatory"
                                android:textColor="#636388"
                                android:textSize="11sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <!-- Preview Time -->
            <TextView
                android:id="@+id/tvPreviewTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Preview generated on Oct 24, 2023 at 10:45 AM"
                android:textColor="#636388"
                android:textSize="11sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp" />

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Buttons -->
    <LinearLayout
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:elevation="8dp"
        android:padding="16dp"
        android:layout_alignParentBottom="true">

        <!-- Back to Edit Button -->
        <Button
            android:id="@+id/btnBackToEdit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_outline_button"
            android:text="Back to Edit"
            android:textColor="#111118"
            android:textSize="14sp"
            android:textStyle="bold"
            android:paddingVertical="14dp"
            android:gravity="center"
            android:stateListAnimator="@null" />

        <!-- Share / Download Button -->
        <Button
            android:id="@+id/btnShareDownload"
