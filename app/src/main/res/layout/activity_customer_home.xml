<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:elevation="4dp">

        <!-- Status Bar Spacer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:background="@color/white" />

        <!-- Toolbar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:paddingTop="4dp">

            <!-- App Title and Subtitle -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Florra"
                    android:textColor="@color/primary"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:letterSpacing="-0.02" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="2dp">

                    <View
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:background="@drawable/bg_dot"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CUSTOMER APP"
                        android:textColor="@color/slate_500"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.05" />
                </LinearLayout>
            </LinearLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- Icons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Notifications -->
                <RelativeLayout
                    android:id="@+id/btnNotifications"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_circle_icon"
                    android:layout_marginEnd="12dp"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_notifications"
                        android:tint="@color/slate_900"
                        android:layout_centerInParent="true" />
                </RelativeLayout>

                <!-- Search -->
                <RelativeLayout
                    android:id="@+id/btnSearch"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_black_circle"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_search"
                        android:tint="@color/white"
                        android:layout_centerInParent="true" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:layout_above="@+id/bottomNav"
        android:fillViewport="true"
        android:paddingBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Welcome Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:paddingTop="24dp"
                android:paddingBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome, User"
                    android:textColor="@color/primary"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:letterSpacing="-0.02" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Explore our latest tile collections and designs."
                    android:textColor="@color/slate_500"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Quick Actions Horizontal Scroll -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:paddingHorizontal="20dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Calculator Card -->
                    <LinearLayout
                        android:id="@+id/btnCalculator"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/bg_quick_action"
                        android:padding="12dp"
                        android:layout_marginEnd="12dp"
                        android:clickable="true"
                        android:focusable="true">

                        <RelativeLayout
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@drawable/bg_grey_circle"
                            android:layout_marginBottom="12dp">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_calculate"
                                android:tint="@color/slate_900"
                                android:layout_centerInParent="true" />
                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Calculator"
                            android:textColor="@color/slate_900"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Scan QR Card -->
                    <LinearLayout
                        android:id="@+id/btnScanQR"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/bg_quick_action"
                        android:padding="12dp"
                        android:layout_marginEnd="12dp"
                        android:clickable="true"
                        android:focusable="true">

                        <RelativeLayout
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@drawable/bg_grey_circle"
                            android:layout_marginBottom="12dp">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_qr_code"
                                android:tint="@color/slate_900"
                                android:layout_centerInParent="true" />
                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Scan Image"
                            android:textColor="@color/slate_900"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Start Enquiry Card (Black) -->
                    <LinearLayout
                        android:id="@+id/btnStartEnquiry"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/bg_black_action"
                        android:padding="12dp"
                        android:layout_marginEnd="12dp"
                        android:clickable="true"
                        android:focusable="true">

                        <RelativeLayout
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@drawable/bg_white_circle_transparent"
                            android:layout_marginBottom="12dp">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/ic_favorite_border"
                                android:tint="@color/white" />
                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Favorites"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>

            <!-- Collections Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:layout_marginBottom="24dp">

                <!-- Section Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Collections"
                        android:textColor="@color/slate_900"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:letterSpacing="-0.01" />

                    <!-- 4 Categories Badge -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/bg_category_badge"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4 CATEGORIES"
                            android:textColor="@color/slate_600"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.05" />
                    </LinearLayout>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <!-- See All -->
                    <LinearLayout
                        android:id="@+id/btnSeeAll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="See all"
                            android:textColor="@color/slate_900"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_arrow_forward"
                            android:tint="@color/slate_900"
                            android:layout_marginStart="4dp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Collections Grid -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Row 1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <!-- Floor Tiles -->
                        <RelativeLayout
                            android:id="@+id/cardFloorTiles"
                            android:layout_width="0dp"
                            android:layout_height="180dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:background="@drawable/bg_collection_card"
                            android:clickable="true"
                            android:focusable="true">

                            <!-- Background Image (Placeholder - you'll add actual image) -->
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/slate_200" />

                            <!-- Gradient Overlay -->
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/fl" />

                            <!-- Content -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="16dp"
                                android:layout_alignParentBottom="true">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Floor Tiles"
                                        android:textColor="@color/white"
                                        android:textSize="18sp"
                                        android:textStyle="bold"
                                        android:letterSpacing="-0.01" />

                                    <Space
                                        android:layout_width="0dp"
                                        android:layout_height="0dp"
                                        android:layout_weight="1" />

                                    <!-- Arrow Icon -->
                                    <RelativeLayout
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:background="@drawable/bg_transparent_circle">

                                        <ImageView
                                            android:layout_width="12dp"
                                            android:layout_height="12dp"
                                            android:src="@drawable/ic_arrow_outward"
                                            android:tint="@color/white"
                                            android:layout_centerInParent="true" />
                                    </RelativeLayout>
                                </LinearLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Ceramic, Vitrified"
                                    android:textColor="@color/slate_300"
                                    android:textSize="12sp"
                                    android:layout_marginTop="4dp" />
                            </LinearLayout>
                        </RelativeLayout>

                        <!-- Wall Tiles -->
                        <RelativeLayout
                            android:id="@+id/cardWallTiles"
                            android:layout_width="0dp"
                            android:layout_height="180dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/bg_collection_card"
                            android:clickable="true"
                            android:focusable="true">

                            <!-- Background Image (Placeholder - you'll add actual image) -->
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/slate_300" />

                            <!-- Gradient Overlay -->
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/wa" />

                            <!-- Content -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="16dp"
                                android:layout_alignParentBottom="true">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Wall Tiles"
                                        android:textColor="@color/white"
                                        android:textSize="18sp"
                                        android:textStyle="bold"
                                        android:letterSpacing="-0.01" />

                                    <Space
                                        android:layout_width="0dp"
                                        android:layout_height="0dp"
                                        android:layout_weight="1" />

                                    <!-- Arrow Icon -->
                                    <RelativeLayout
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:background="@drawable/bg_transparent_circle">

                                        <ImageView
                                            android:layout_width="12dp"
                                            android:layout_height="12dp"
                                            android:src="@drawable/ic_arrow_outward"
                                            android:tint="@color/white"
                                            android:layout_centerInParent="true" />
                                    </RelativeLayout>
                                </LinearLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Cladding, Mosaic"
                                    android:textColor="@color/slate_300"
                                    android:textSize="12sp"
                                    android:layout_marginTop="4dp" />
                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>

                    <!-- Row 2 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Bathroom -->
                        <RelativeLayout
                            android:id="@+id/cardBathroom"
                            android:layout_width="0dp"
                            android:layout_height="180dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:background="@drawable/bg_collection_card"
                            android:clickable="true"
                            android:focusable="true">

                            <!-- Background Image (Placeholder - you'll add actual image) -->
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/slate_400" />

                            <!-- Gradient Overlay -->
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/ba" />

                            <!-- Content -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="16dp"
                                android:layout_alignParentBottom="true">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Bathroom"
                                        android:textColor="@color/white"
                                        android:textSize="18sp"
                                        android:textStyle="bold"
                                        android:letterSpacing="-0.01" />

                                    <Space
                                        android:layout_width="0dp"
                                        android:layout_height="0dp"
                                        android:layout_weight="1" />

                                    <!-- Arrow Icon -->
                                    <RelativeLayout
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:background="@drawable/bg_transparent_circle">

                                        <ImageView
                                            android:layout_width="12dp"
                                            android:layout_height="12dp"
                                            android:src="@drawable/ic_arrow_outward"
                                            android:tint="@color/white"
                                            android:layout_centerInParent="true" />
                                    </RelativeLayout>
                                </LinearLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Anti-skid, Sanitary"
                                    android:textColor="@color/slate_300"
                                    android:textSize="12sp"
                                    android:layout_marginTop="4dp" />
                            </LinearLayout>
                        </RelativeLayout>

                        <!-- Kitchen -->
                        <RelativeLayout
                            android:id="@+id/cardKitchen"
                            android:layout_width="0dp"
                            android:layout_height="180dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/bg_collection_card"
                            android:clickable="true"
                            android:focusable="true">

                            <!-- Background Image (Placeholder - you'll add actual image) -->
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/slate_500" />

                            <!-- Gradient Overlay -->
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/ki" />

                            <!-- Content -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="16dp"
                                android:layout_alignParentBottom="true">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Kitchen"
                                        android:textColor="@color/white"
                                        android:textSize="18sp"
                                        android:textStyle="bold"
                                        android:letterSpacing="-0.01" />

                                    <Space
                                        android:layout_width="0dp"
                                        android:layout_height="0dp"
                                        android:layout_weight="1" />

                                    <!-- Arrow Icon -->
                                    <RelativeLayout
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:background="@drawable/bg_transparent_circle">

                                        <ImageView
                                            android:layout_width="12dp"
                                            android:layout_height="12dp"
                                            android:src="@drawable/ic_arrow_outward"
                                            android:tint="@color/white"
                                            android:layout_centerInParent="true" />
                                    </RelativeLayout>
                                </LinearLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Heat resistant"
                                    android:textColor="@color/slate_300"
                                    android:textSize="12sp"
                                    android:layout_marginTop="4dp" />
                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Overview Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:layout_marginTop="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Overview"
                    android:textColor="@color/slate_900"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:letterSpacing="-0.01"
                    android:layout_marginBottom="12dp" />

                <!-- Active Enquiries Card -->
                <LinearLayout
                    android:id="@+id/cardActiveEnquiries"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_overview_card"
                    android:padding="16dp"
                    android:clickable="true"
                    android:focusable="true">

                    <!-- Icon and Text -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <!-- Icon Container -->
                        <RelativeLayout
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/bg_icon_container"
                            android:layout_marginEnd="16dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_history_edu"
                                android:tint="@color/primary"
                                android:layout_centerInParent="true" />
                        </RelativeLayout>

                        <!-- Text Content -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Active Enquiries"
                                android:textColor="@color/slate_900"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:letterSpacing="-0.01" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginTop="4dp">

                                <View
                                    android:layout_width="6dp"
                                    android:layout_height="6dp"
                                    android:background="@drawable/bg_dot"
                                    android:layout_marginEnd="8dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2 Requests in Progress"
                                    android:textColor="@color/slate_500"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <!-- Chevron -->
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_chevron_right"
                        android:tint="@color/slate_400" />
                </LinearLayout>
            </LinearLayout>

            <!-- Bottom Spacer -->
            <View
                android:layout_width="match_parent"
                android:layout_height="80dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_bottom_nav"
        android:layout_alignParentBottom="true"
        android:elevation="8dp">

        <!-- Navigation Items -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="24dp"
            android:paddingTop="8dp"
            android:paddingBottom="12dp">

            <!-- Home -->
            <LinearLayout
                android:id="@+id/btnNavHome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_home_filled"
                    android:tint="@color/primary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:textColor="@color/primary"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.05"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Catalog -->
            <LinearLayout
                android:id="@+id/btnNavCatalog"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_grid_view"
                    android:tint="@color/slate_400" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Catalog"
                    android:textColor="@color/slate_400"
                    android:textSize="10sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Enquiries -->
            <LinearLayout
                android:id="@+id/btnNavEnquiries"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_chat_bubble"
                    android:tint="@color/slate_400" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quotations"
                    android:textColor="@color/slate_400"
                    android:textSize="10sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Account -->
            <LinearLayout
                android:id="@+id/btnNavAccount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_person_outline"
                    android:tint="@color/slate_400" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Account"
                    android:textColor="@color/slate_400"
                    android:textSize="10sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Bottom Safe Area Spacer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:background="@color/white" />
    </LinearLayout>

</RelativeLayout>