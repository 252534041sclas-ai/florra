<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f9fa"
    android:orientation="vertical">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingTop="24dp"
        android:paddingBottom="8dp"
        android:elevation="2dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <!-- Back Button -->
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btnBack"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_alignParentStart="true"
                android:padding="16dp"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="Back"
                android:tint="#1a1a1a" />

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Notifications"
                android:textColor="#1e293b"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Mark All Read Button -->
            <TextView
                android:id="@+id/btnMarkAllRead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="Mark all read"
                android:textColor="#1a1a1a"
                android:textSize="14sp"
                android:textStyle="normal"
                android:padding="12dp" />
        </RelativeLayout>

        <!-- Tab Filter -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_tab_selector"
            android:padding="2dp"
            android:orientation="horizontal">

            <!-- All Tab -->
            <TextView
                android:id="@+id/tabAll"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="All"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@drawable/bg_tab_selected" />

            <!-- Quotations Tab -->
            <TextView
                android:id="@+id/tabQuotations"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Quotations"
                android:textColor="#64748b"
                android:textSize="12sp"
                android:textStyle="normal" />

            <!-- System Tab -->
            <TextView
                android:id="@+id/tabSystem"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="System"
                android:textColor="#64748b"
                android:textSize="12sp"
                android:textStyle="normal" />
        </LinearLayout>
    </LinearLayout>

    <!-- Notifications List -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <!-- Notification 1 (Unread) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="1dp"
                app:cardBackgroundColor="@android:color/white"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <!-- Icon -->
                    <LinearLayout
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="#f1f5f9"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_marginEnd="16dp"
                        android:backgroundTint="#f1f5f9">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_description"
                            android:tint="#1a1a1a" />
                    </LinearLayout>

                    <!-- Content -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <!-- Title and Time -->
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Question #204 Updated"
                                android:textColor="#1e293b"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:maxLines="1"
                                android:ellipsize="end" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:text="10m ago"
                                android:textColor="#64748b"
                                android:textSize="12sp"
                                android:textStyle="normal" />
                        </RelativeLayout>

                        <!-- Description -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="The pricing for the Italian Marble selection has been revised per your request. Check the updated PDF."
                            android:textColor="#475569"
                            android:textSize="12sp"
                            android:maxLines="2"
                            android:ellipsize="end" />
                    </LinearLayout>

                    <!-- Unread Indicator -->
                    <View
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginStart="8dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/bg_unread_indicator" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Notification 2 (Read) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="1dp"
                app:cardBackgroundColor="#f9fafb"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <!-- Icon -->
                    <LinearLayout
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@android:color/white"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_marginEnd="16dp"
                        android:backgroundTint="@android:color/white">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_verified"
                            android:tint="#94a3b8" />
                    </LinearLayout>

                    <!-- Content -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <!-- Title and Time -->
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="New Collection Alert"
                                android:textColor="#334155"
                                android:textSize="14sp"
                                android:textStyle="normal"
                                android:maxLines="1"
                                android:ellipsize="end" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:text="Yesterday"
                                android:textColor="#cbd5e1"
                                android:textSize="12sp"
                                android:textStyle="normal" />
                        </RelativeLayout>

                        <!-- Description -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Explore our new 'Onyx Series' available in the showroom now. Book a viewing appointment."
                            android:textColor="#94a3b8"
                            android:textSize="12sp"
                            android:maxLines="2"
                            android:ellipsize="end" />
                    </LinearLayout>

                    <!-- Chevron -->
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="8dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_chevron_right"
                        android:tint="#cbd5e1" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Notification 3 (Read) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="1dp"
                app:cardBackgroundColor="#f9fafb"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <!-- Icon -->
                    <LinearLayout
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@android:color/white"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_marginEnd="16dp"
                        android:backgroundTint="@android:color/white">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_info"
                            android:tint="#94a3b8" />
                    </LinearLayout>

                    <!-- Content -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <!-- Title and Time -->
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Holiday Hours"
                                android:textColor="#334155"
                                android:textSize="14sp"
                                android:textStyle="normal"
                                android:maxLines="1"
                                android:ellipsize="end" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:text="2 days ago"
                                android:textColor="#cbd5e1"
                                android:textSize="12sp"
                                android:textStyle="normal" />
                        </RelativeLayout>

                        <!-- Description -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="The showroom will be closed this coming Friday for inventory checks."
                            android:textColor="#94a3b8"
                            android:textSize="12sp"
                            android:maxLines="2"
                            android:ellipsize="end" />
                    </LinearLayout>

                    <!-- Chevron -->
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="8dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_chevron_right"
                        android:tint="#cbd5e1" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Notification 4 (Unread) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="1dp"
                app:cardBackgroundColor="@android:color/white"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <!-- Icon -->
                    <LinearLayout
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="#f1f5f9"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_marginEnd="16dp"
                        android:backgroundTint="#f1f5f9">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_price_change"
                            android:tint="#1a1a1a" />
                    </LinearLayout>

                    <!-- Content -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <!-- Title and Time -->
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Price Update: Spanish Tiles"
                                android:textColor="#1e293b"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:maxLines="1"
                                android:ellipsize="end" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:text="3 days ago"
                                android:textColor="#64748b"
                                android:textSize="12sp"
                                android:textStyle="normal" />
                        </RelativeLayout>

                        <!-- Description -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Updated MSRP for the entire Spanish Ceramic collection effective immediately."
                            android:textColor="#475569"
                            android:textSize="12sp"
                            android:maxLines="2"
                            android:ellipsize="end" />
                    </LinearLayout>

                    <!-- Unread Indicator -->
                    <View
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginStart="8dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/bg_unread_indicator" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Notification 5 (Read) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="1dp"
                app:cardBackgroundColor="#f9fafb"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <!-- Icon -->
                    <LinearLayout
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@android:color/white"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_marginEnd="16dp"
                        android:backgroundTint="@android:color/white">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_inventory"
                            android:tint="#94a3b8" />
                    </LinearLayout>

                    <!-- Content -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <!-- Title and Time -->
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Stock Low Warning"
                                android:textColor="#334155"
                                android:textSize="14sp"
                                android:textStyle="normal"
                                android:maxLines="1"
                                android:ellipsize="end" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:text="Last week"
                                android:textColor="#cbd5e1"
                                android:textSize="12sp"
                                android:textStyle="normal" />
                        </RelativeLayout>

                        <!-- Description -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Beige Travertine stock is running low (below 500 sq ft). Please place a restock order."
                            android:textColor="#94a3b8"
                            android:textSize="12sp"
                            android:maxLines="2"
                            android:ellipsize="end" />
                    </LinearLayout>

                    <!-- Chevron -->
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="8dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_chevron_right"
                        android:tint="#cbd5e1" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>