<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:fitsSystemWindows="true">

    <!-- Main Scroll View -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:paddingBottom="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:elevation="2dp"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp"
                android:gravity="center_vertical">

                <!-- Back Button -->
                <Button
                    android:id="@+id/btnBack"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/ic_back_arrow"
                    android:gravity="center"
                    android:text="â†"
                    android:textColor="@color/primary_color"
                    android:textSize="20sp"
                    android:stateListAnimator="@null" />

                <!-- Title -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Generate Bill"
                    android:textColor="@color/primary_color"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:paddingRight="40dp" />

            </LinearLayout>

            <!-- Billed To Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:paddingBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Billed To"
                    android:textColor="@color/primary_color"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <!-- Customer Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="1dp"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <!-- Person Icon -->
                        <LinearLayout
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:background="@drawable/bg_icon_container"
                            android:gravity="center"
                            android:layout_marginEnd="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ‘¤"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <!-- Customer Details -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvCustomerName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rahul Sharma"
                                android:textColor="@color/primary_color"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="4dp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="2dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ðŸ“ž"
                                    android:textSize="12sp"
                                    android:layout_marginEnd="4dp" />

                                <TextView
                                    android:id="@+id/tvCustomerPhone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="+91 98765 43210"
                                    android:textColor="@color/zinc_500"
                                    android:textSize="14sp" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/tvCustomerAddress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="12, Green Park Avenue, Delhi"
                                android:textColor="@color/zinc_500"
                                android:textSize="14sp"
                                android:lineSpacingExtra="2dp" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Bill No and Date -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:paddingBottom="16dp">

                <!-- Bill No Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardBillNo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BILL NO"
                            android:textColor="@color/zinc_500"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.5"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tvBillNo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="#FL-2023-89"
                            android:textColor="@color/primary_color"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Date Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DATE"
                            android:textColor="@color/zinc_500"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.5"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tvDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="24 Oct, 2023"
                            android:textColor="@color/primary_color"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Items Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                android:paddingBottom="16dp">

                <!-- Section Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Items (2)"
                        android:textColor="@color/primary_color"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <!-- Add Item Button -->
                    <Button
                        android:id="@+id/btnAddItem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:text="+ Add Item"
                        android:textColor="@color/primary_color"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:stateListAnimator="@null" />

                </LinearLayout>

                <!-- Item 1 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardItem1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="1dp"
                    android:layout_marginBottom="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12px">

                        <!-- Item Header -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="4dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Statuario White"
                                android:textColor="@color/primary_color"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvItem1Price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="â‚¹42,500"
                                android:textColor="@color/primary_color"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <!-- Item Details -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Size: 60Ã—120cm â€¢ 50 boxes"
                            android:textColor="@color/zinc_500"
                            android:textSize="12sp"
                            android:layout_marginBottom="8dp" />

                        <!-- Rate -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rate: â‚¹850"
                            android:textColor="@color/zinc_600"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:background="@drawable/bg_rate_tag"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="2dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Item 2 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardItem2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <!-- Item Header -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="4dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Moroccan Decor"
                                android:textColor="@color/primary_color"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvItem2Price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="â‚¹4,500"
                                android:textColor="@color/primary_color"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <!-- Item Details -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Size: 30Ã—30cm â€¢ 10 boxes"
                            android:textColor="@color/zinc_500"
                            android:textSize="12sp"
                            android:layout_marginBottom="8dp" />

                        <!-- Rate -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rate: â‚¹450"
                            android:textColor="@color/zinc_600"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:background="@drawable/bg_rate_tag"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="2dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Payment Summary -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Payment Summary"
                    android:textColor="@color/primary_color"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <!-- Summary Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- Subtotal -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp"
                            android:paddingBottom="12dp"
                            android:background="@drawable/border_bottom_dashed">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Subtotal"
                                android:textColor="@color/zinc_500"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvSubtotal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="â‚¹47,000"
                                android:textColor="@color/primary_color"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <!-- GST Input -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="GST %"
                                    android:textColor="@color/zinc_500"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:layout_marginBottom="4dp" />

                                <!-- GST Input with % symbol -->
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <EditText
                                        android:id="@+id/etGST"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:inputType="numberDecimal"
                                        android:text="18"
                                        android:textSize="14sp"
                                        android:textColor="@color/primary_color"
                                        android:background="@drawable/bg_input_field"
                                        android:paddingStart="12dp"
                                        android:paddingEnd="30dp"
                                        android:paddingVertical="10dp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="%"
                                        android:textColor="@color/zinc_500"
                                        android:textSize="14sp"
                                        android:layout_alignParentEnd="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginEnd="12dp" />

                                </RelativeLayout>

                            </LinearLayout>

                            <TextView
                                android:id="@+id/tvGSTAmount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="+ â‚¹8,460"
                                android:textColor="@color/primary_color"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:layout_marginStart="16dp"
                                android:paddingTop="24dp" />

                        </LinearLayout>

                        <!-- Discount Input -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Discount"
                                    android:textColor="@color/zinc_500"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:layout_marginBottom="4dp" />

                                <!-- Discount Input with â‚¹ symbol -->
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="â‚¹"
                                        android:textColor="@color/zinc_500"
                                        android:textSize="14sp"
                                        android:layout_alignParentStart="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginStart="12dp" />

                                    <EditText
                                        android:id="@+id/etDiscount"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:inputType="numberDecimal"
                                        android:text="1000"
                                        android:textSize="14sp"
                                        android:textColor="@color/green_600"
                                        android:background="@drawable/bg_input_field"
                                        android:paddingStart="30dp"
                                        android:paddingEnd="12dp"
                                        android:paddingVertical="10dp" />

                                </RelativeLayout>

                            </LinearLayout>

                            <TextView
                                android:id="@+id/tvDiscountAmount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="- â‚¹1,000"
                                android:textColor="@color/green_600"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:layout_marginStart="16dp"
                                android:paddingTop="24dp" />

                        </LinearLayout>

                        <!-- Loading/Transport Input -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="16dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Loading / Transport"
                                    android:textColor="@color/zinc_500"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:layout_marginBottom="4dp" />

                                <!-- Loading Input with â‚¹ symbol -->
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="â‚¹"
                                        android:textColor="@color/zinc_500"
                                        android:textSize="14sp"
                                        android:layout_alignParentStart="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginStart="12dp" />

                                    <EditText
                                        android:id="@+id/etLoading"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:inputType="numberDecimal"
                                        android:text="500"
                                        android:textSize="14sp"
                                        android:textColor="@color/primary_color"
                                        android:background="@drawable/bg_input_field"
                                        android:paddingStart="30dp"
                                        android:paddingEnd="12dp"
                                        android:paddingVertical="10dp" />

                                </RelativeLayout>

                            </LinearLayout>

                            <TextView
                                android:id="@+id/tvLoadingAmount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="+ â‚¹500"
                                android:textColor="@color/primary_color"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:layout_marginStart="16dp"
                                android:paddingTop="24dp" />

                        </LinearLayout>

                        <!-- Grand Total -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingTop="12dp"
                            android:background="@drawable/border_top_solid">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Grand Total"
                                android:textColor="@color/primary_color"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvGrandTotal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="â‚¹54,960"
                                android:textColor="@color/primary_color"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Bottom Spacer -->
            <View
                android:layout_width="match_parent"
                android:layout_height="50dp" />

        </LinearLayout>

    </ScrollView>

    <!-- Fixed Bottom Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:elevation="8dp"
        android:padding="16dp"
        android:layout_alignParentBottom="true">

        <!-- Preview Button -->
        <Button
            android:id="@+id/btnPreview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_outline_button"
            android:text="Preview"
            android:textColor="@color/primary_color"
            android:textSize="14sp"
            android:textStyle="bold"
            android:drawableStart="@drawable/ic_visibility"
            android:drawablePadding="8dp"
            android:paddingVertical="14dp"
            android:gravity="center"
            android:stateListAnimator="@null" />

        <!-- Save Bill Button -->
        <Button
            android:id="@+id/btnSaveBill"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_primary_button"
            android:text="Save Bill"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:drawableStart="@drawable/ic_save"
            android:drawablePadding="8dp"
            android:paddingVertical="14dp"
            android:gravity="center"
            android:stateListAnimator="@null" />

    </LinearLayout>

</RelativeLayout>