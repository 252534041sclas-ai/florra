<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9fafb"
    android:paddingBottom="80dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- HEADER -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="horizontal"
            android:padding="16dp"
            android:elevation="4dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:contentDescription="Back" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Edit Product"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center" />

            <ImageView
                android:id="@+id/btnDelete"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_delete"
                android:contentDescription="Delete" />
        </LinearLayout>

        <!-- Image Container -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@android:color/white"
            android:padding="12dp"
            android:elevation="4dp">

            <ImageView
                android:id="@+id/ivProductImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:background="#e5e7eb"
                android:contentDescription="Product Image" />

            <Button
                android:id="@+id/btnChangePhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="12dp"
                android:background="#ffffff"
                android:text="Change Photo"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold"
                android:padding="12dp" />
        </RelativeLayout>

        <!-- Basic Information Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:elevation="4dp"
            android:padding="20dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Basic Information"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#111827"
                android:layout_marginBottom="12dp" />

            <!-- Tile Name -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tile Name"
                android:textSize="14sp"
                android:textColor="#374151"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/etTileName"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#f9fafb"
                android:text="Carrara White Marble"
                android:textSize="16sp"
                android:textColor="#111827"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginBottom="16dp" />

            <!-- Brand Name -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Brand Name"
                android:textSize="14sp"
                android:textColor="#374151"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/etBrandName"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#f9fafb"
                android:text="Florra Ceramics"
                android:textSize="16sp"
                android:textColor="#111827"
                android:paddingStart="16dp"
                android:paddingEnd="16dp" />
        </LinearLayout>

        <!-- Classification Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:elevation="4dp"
            android:padding="20dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Classification"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#111827"
                android:layout_marginBottom="12dp" />

            <!-- Category -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textSize="14sp"
                android:textColor="#374151"
                android:layout_marginBottom="4dp" />

            <Spinner
                android:id="@+id/spCategory"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#f9fafb"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginBottom="16dp" />

            <!-- Size -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Size"
                android:textSize="14sp"
                android:textColor="#374151"
                android:layout_marginBottom="4dp" />

            <Spinner
                android:id="@+id/spSize"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#f9fafb"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginBottom="16dp" />

            <!-- Finish -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Finish"
                android:textSize="14sp"
                android:textColor="#374151"
                android:layout_marginBottom="4dp" />

            <Spinner
                android:id="@+id/spFinish"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#f9fafb"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginBottom="16dp" />

            <!-- Color -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Color"
                android:textSize="14sp"
                android:textColor="#374151"
                android:layout_marginBottom="4dp" />

            <Button
                android:id="@+id/btnColor"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#f9fafb"
                android:text="White"
                android:textColor="#111827"
                android:textSize="16sp"
                android:drawableStart="@android:drawable/presence_online"
                android:drawablePadding="8dp"
                android:gravity="start|center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp" />
        </LinearLayout>

        <!-- Bottom Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:elevation="4dp"
            android:padding="16dp"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:background="#F9FBFA"
                android:text="Cancel"
                android:textColor="#374151"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnSave"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:background="#000000"
                android:text="Save Changes"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>