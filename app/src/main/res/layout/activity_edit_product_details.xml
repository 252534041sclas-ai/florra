<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9fafb"
    android:paddingBottom="80dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Image Container -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@android:color/white"
            android:padding="12dp"
            android:elevation="4dp"
            android:foreground="?android:attr/selectableItemBackground">

            <ImageView
                android:id="@+id/ivProductImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_placeholder_image"
                android:background="#e5e7eb"
                android:contentDescription="Product Image" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#20000000" />

            <Button
                android:id="@+id/btnChangePhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="12dp"
                android:background="@drawable/bg_button_white"
                android:elevation="4dp"
                android:drawableStart="@drawable/ic_photo_camera"
                android:drawablePadding="8dp"
                android:text="Change Photo"
                android:textColor="#111827"
                android:textSize="14sp"
                android:textStyle="bold"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp" />
        </RelativeLayout>

        <!-- Basic Information Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:elevation="4dp"
            android:padding="20dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_edit_note"
                    android:tint="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Basic Information"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#111827"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Tile Name -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tile Name"
                android:textSize="14sp"
                android:textColor="#374151"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/etTileName"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_edittext"
                android:text="Carrara White Marble"
                android:textSize="16sp"
                android:textColor="#111827"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginBottom="16dp" />

            <!-- Brand Name -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Brand Name"
                android:textSize="14sp"
                android:textColor="#374151"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/etBrandName"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_edittext"
                android:text="Florra Ceramics"
                android:textSize="16sp"
                android:textColor="#111827"
                android:paddingStart="16dp"
                android:paddingEnd="16dp" />
        </LinearLayout>

        <!-- Classification Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:elevation="4dp"
            android:padding="20dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_category"
                    android:tint="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Classification"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#111827"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Grid for Category, Size, Finish, Color -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2"
                android:columnWidth="0dp"
                android:useDefaultMargins="true"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="false"
                android:padding="4dp">

                <!-- Category -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Category"
                    android:textSize="14sp"
                    android:textColor="#374151"
                    android:layout_marginBottom="4dp"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="0"
                    app:layout_gravity="fill_horizontal" />

                <!-- Size -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Size"
                    android:textSize="14sp"
                    android:textColor="#374151"
                    android:layout_marginBottom="4dp"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="0"
                    app:layout_gravity="fill_horizontal" />

                <!-- Category Spinner -->
                <Spinner
                    android:id="@+id/spCategory"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_edittext"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1"
                    app:layout_gravity="fill_horizontal" />

                <!-- Size Spinner -->
                <Spinner
                    android:id="@+id/spSize"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_edittext"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1"
                    app:layout_gravity="fill_horizontal" />

                <!-- Finish -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Finish"
                    android:textSize="14sp"
                    android:textColor="#374151"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="4dp"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="0"
                    app:layout_gravity="fill_horizontal" />

                <!-- Color -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Color"
                    android:textSize="14sp"
                    android:textColor="#374151"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="4dp"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="0"
                    app:layout_gravity="fill_horizontal" />

                <!-- Finish Spinner -->
                <Spinner
                    android:id="@+id/spFinish"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_edittext"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1"
                    app:layout_gravity="fill_horizontal" />

                <!-- Color Button -->
                <Button
                    android:id="@+id/btnColor"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_edittext"
                    android:text="White"
                    android:textColor="#111827"
                    android:textSize="16sp"
                    android:drawableStart="@drawable/ic_color_circle"
                    android:drawablePadding="8dp"
                    android:gravity="start|center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1"
                    app:layout_gravity="fill_horizontal" />

            </GridLayout>
        </LinearLayout>

        <!-- Inventory & Pricing Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:elevation="4dp"
            android:padding="20dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_inventory"
                    android:tint="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Inventory & Pricing"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#111827"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="1"
                android:columnWidth="0dp"
                android:useDefaultMargins="true"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="false"
                android:padding="4dp">

                <!-- Price -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Price (per box)"
                    android:textSize="14sp"
                    android:textColor="#374151"
                    android:layout_marginBottom="4dp"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="0"
                    app:layout_gravity="fill_horizontal" />

                <!-- Stock Qty -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Stock Qty"
                    android:textSize="14sp"
                    android:textColor="#374151"
                    android:layout_marginBottom="4dp"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="0"
                    app:layout_gravity="fill_horizontal" />

                <!-- Price EditText -->
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1"
                    app:layout_gravity="fill_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$"
                        android:textSize="16sp"
                        android:textColor="#6b7280"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="16dp" />

                    <EditText
                        android:id="@+id/etPrice"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_edittext"
                        android:text="45.00"
                        android:textSize="16sp"
                        android:textColor="#111827"
                        android:inputType="numberDecimal"
                        android:paddingStart="32dp"
                        android:paddingEnd="16dp" />
                </RelativeLayout>

                <!-- Stock EditText -->
                <EditText
                    android:id="@+id/etStock"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_edittext"
                    android:text="120"
                    android:textSize="16sp"
                    android:textColor="#111827"
                    android:inputType="number"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1"
                    app:layout_gravity="fill_horizontal" />

            </GridLayout>
        </LinearLayout>

        <!-- Additional Details Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:elevation="4dp"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_description"
                    android:tint="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Additional Details"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#111827"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Description -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description / Notes"
                android:textSize="14sp"
                android:textColor="#374151"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/etDescription"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/bg_edittext"
                android:text="Elegant white marble porcelain tile suitable for living rooms and commercial spaces. High durability and scratch resistant."
                android:textSize="16sp"
                android:textColor="#111827"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:padding="16dp"
                android:layout_marginBottom="16dp" />

            <!-- Active Product Switch -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="16dp"
                android:paddingBottom="8dp"
                android:background="#f9fafb"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Active Product"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#111827" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Visible to customers in showroom mode"
                        android:textSize="12sp"
                        android:textColor="#6b7280"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <Switch
                    android:id="@+id/switchActive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>