<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9fafb"
    android:fitsSystemWindows="true">

    <!-- Background Pattern -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_pattern" />

    <!-- Main Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/transparent">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:elevation="4dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:gravity="center_vertical">

            <!-- Back Button -->
            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_circle_icon"
                android:src="@drawable/ic_arrow_back"
                android:tint="@color/primary"
                android:scaleType="center"
                android:contentDescription="Back" />

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calculator"
                android:textColor="@color/primary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="12dp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- Reset Button -->
            <Button
                android:id="@+id/btnReset"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:background="@drawable/bg_button_outline"
                android:text="RESET"
                android:textColor="@color/primary"
                android:textSize="12sp"
                android:textStyle="bold"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:drawableStart="@drawable/ic_restart"
                android:drawableTint="@color/primary"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:letterSpacing="0.05"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>

        <!-- Content Scroll -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Unit Selection -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:background="@drawable/bg_unit_selector"
                        android:padding="2dp">

                        <RadioGroup
                            android:id="@+id/rgUnits"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/rbFeet"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:button="@null"
                                android:background="@drawable/bg_unit_tab"
                                android:gravity="center"
                                android:text="Feet"
                                android:textColor="@color/text_muted"
                                android:textSize="14sp"
                                android:checked="true" />

                            <RadioButton
                                android:id="@+id/rbMeters"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:button="@null"
                                android:background="@drawable/bg_unit_tab"
                                android:gravity="center"
                                android:text="Meters"
                                android:textColor="@color/text_muted"
                                android:textSize="14sp" />

                            <RadioButton
                                android:id="@+id/rbInches"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:button="@null"
                                android:background="@drawable/bg_unit_tab"
                                android:gravity="center"
                                android:text="Inches"
                                android:textColor="@color/text_muted"
                                android:textSize="14sp" />
                        </RadioGroup>
                    </LinearLayout>
                </LinearLayout>

                <!-- Room Dimensions Card -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_card"
                    android:padding="20dp"
                    android:layout_marginBottom="16dp">

                    <!-- Card Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_square_foot"
                            android:tint="@color/primary"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Room Dimensions"
                            android:textColor="@color/primary"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Length and Width Inputs -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <!-- Length -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginEnd="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="LENGTH"
                                android:textColor="@color/text_muted"
                                android:textSize="11sp"
                                android:textStyle="bold"
                                android:letterSpacing="0.05"
                                android:layout_marginBottom="6dp"
                                android:layout_marginStart="4dp" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <EditText
                                    android:id="@+id/etLength"
                                    android:layout_width="match_parent"
                                    android:layout_height="56dp"
                                    android:background="@drawable/bg_input_field"
                                    android:inputType="numberDecimal"
                                    android:paddingStart="16dp"
                                    android:paddingEnd="40dp"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/primary"
                                    android:hint="0" />

                                <TextView
                                    android:id="@+id/tvLengthUnit"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ft"
                                    android:textColor="@color/text_muted"
                                    android:textSize="14sp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginEnd="16dp" />
                            </RelativeLayout>
                        </LinearLayout>

                        <!-- Width -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="WIDTH"
                                android:textColor="@color/text_muted"
                                android:textSize="11sp"
                                android:textStyle="bold"
                                android:letterSpacing="0.05"
                                android:layout_marginBottom="6dp"
                                android:layout_marginStart="4dp" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <EditText
                                    android:id="@+id/etWidth"
                                    android:layout_width="match_parent"
                                    android:layout_height="56dp"
                                    android:background="@drawable/bg_input_field"
                                    android:inputType="numberDecimal"
                                    android:paddingStart="16dp"
                                    android:paddingEnd="40dp"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/primary"
                                    android:hint="0" />

                                <TextView
                                    android:id="@+id/tvWidthUnit"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ft"
                                    android:textColor="@color/text_muted"
                                    android:textSize="14sp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginEnd="16dp" />
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- Tile Specifications Card -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_card"
                    android:padding="20dp"
                    android:layout_marginBottom="16dp">

                    <!-- Card Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_grid_view"
                            android:tint="@color/primary"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tile Specifications"
                            android:textColor="@color/primary"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Tile Size Selection -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="24dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SELECT SIZE"
                            android:textColor="@color/text_muted"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.05"
                            android:layout_marginBottom="6dp"
                            android:layout_marginStart="4dp" />

                        <Spinner
                            android:id="@+id/spinnerTileSize"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@drawable/bg_spinner"
                            android:paddingStart="16dp"
                            android:paddingEnd="40dp" />
                    </LinearLayout>

                    <!-- Wastage Buffer -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/bg_wastage_container"
                        android:padding="16dp">

                        <!-- Header -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="16dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Wastage Buffer"
                                    android:textColor="@color/primary"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="For cuts &amp; breakages"
                                    android:textColor="@color/text_muted"
                                    android:textSize="10sp" />
                            </LinearLayout>

                            <Space
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1" />

                            <!-- Wastage Percentage -->
                            <TextView
                                android:id="@+id/tvWastagePercent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5%"
                                android:background="@drawable/bg_percentage_badge"
                                android:textColor="@color/primary"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:paddingHorizontal="12dp"
                                android:paddingVertical="6dp" />
                        </LinearLayout>

                        <!-- SeekBar -->
                        <SeekBar
                            android:id="@+id/seekBarWastage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:max="20"
                            android:progress="5"
                            android:thumb="@drawable/thumb_circle" />

                        <!-- Percentage Labels -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_marginTop="4dp"
                            android:paddingHorizontal="4dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0%"
                                android:textColor="@color/text_muted"
                                android:textSize="10sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10%"
                                android:textColor="@color/text_muted"
                                android:textSize="10sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="20%"
                                android:textColor="@color/text_muted"
                                android:textSize="10sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- Results Card -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_results_card"
                    android:padding="24dp"
                    android:layout_marginBottom="16dp">

                    <!-- Results Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="24dp">

                        <!-- Total Required -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="TOTAL REQUIRED"
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:letterSpacing="0.05"
                                android:alpha="0.8"
                                android:layout_marginBottom="4dp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <TextView
                                    android:id="@+id/tvTotalBoxes"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="15"
                                    android:textColor="@color/white"
                                    android:textSize="48sp"
                                    android:textStyle="bold"
                                    android:letterSpacing="-0.02" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Boxes"
                                    android:textColor="@color/white"
                                    android:textSize="18sp"
                                    android:layout_marginStart="4dp"
                                    android:alpha="0.8" />
                            </LinearLayout>
                        </LinearLayout>

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <!-- Coverage Area -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@drawable/bg_coverage_area"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="COVERAGE AREA"
                                android:textColor="@color/white"
                                android:textSize="10sp"
                                android:textStyle="bold"
                                android:letterSpacing="0.05"
                                android:alpha="0.8"
                                android:layout_marginBottom="2dp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <TextView
                                    android:id="@+id/tvCoverageArea"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="120"
                                    android:textColor="@color/white"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="sq. ft"
                                    android:textColor="@color/white"
                                    android:textSize="14sp"
                                    android:layout_marginStart="4dp"
                                    android:alpha="0.8" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Tile Count -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/bg_coverage_area"
                        android:padding="12dp"
                        android:gravity="center_vertical">

                        <!-- Icon and Text -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <!-- Icon Container -->
                            <LinearLayout
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:background="@drawable/bg_tile_icon"
                                android:gravity="center"
                                android:layout_marginEnd="10dp">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_layers"
                                    android:tint="@color/white" />
                            </LinearLayout>

                            <!-- Tile Count Text -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvTileCount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="~30 Tiles"
                                    android:textColor="@color/white"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Individual count"
                                    android:textColor="@color/white"
                                    android:textSize="10sp"
                                    android:alpha="0.6" />
                            </LinearLayout>
                        </LinearLayout>

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <!-- Wastage Badge -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Incl. 5% Wastage"
                            android:textColor="@color/white"
                            android:textSize="10sp"
                            android:background="@drawable/armani_grey_tile"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Action Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="24dp">

                    <!-- Add to Quotation Button -->

                    <!-- Save Calculation Button -->
                    <Button
                        android:id="@+id/btnSaveCalculation"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/bg_button_outline"
                        android:text="Save Calculation"
                        android:textColor="@color/primary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:drawableStart="@drawable/ic_bookmark_border"
                        android:drawableTint="@color/primary"
                        android:drawablePadding="8dp"
                        android:gravity="center" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>