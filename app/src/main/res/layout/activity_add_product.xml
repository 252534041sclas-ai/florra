<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:fitsSystemWindows="true">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:paddingVertical="16dp"
        android:paddingHorizontal="16dp"
        android:elevation="2dp"
        android:layout_alignParentTop="true">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_arrow_back"
            android:tint="@color/slate_900"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp" />

        <!-- Title -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add Product"
            android:textColor="@color/slate_900"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:letterSpacing="-0.02" />

        <!-- Reset Button -->
        <TextView
            android:id="@+id/btnReset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:textColor="@color/slate_600"
            android:textSize="14sp"
            android:textStyle="bold"
            android:paddingVertical="8dp"
            android:paddingHorizontal="12dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

    <!-- Main ScrollView -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerLayout"
        android:layout_above="@id/footerLayout"
        android:fillViewport="true"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="100dp">

            <!-- Product Images Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_section_card"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Product Images"
                    android:textColor="@color/slate_900"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:layout_marginBottom="12dp" />

                <!-- Main Image Upload Area -->
                <FrameLayout
                    android:id="@+id/uploadMainImage"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@drawable/bg_upload_area"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginBottom="12dp">

                    <!-- Default upload view -->
                    <LinearLayout
                        android:id="@+id/defaultUploadView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/icAddPhoto"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_add_photo"
                            android:tint="@color/slate_400" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tap to upload main image"
                            android:textColor="@color/slate_500"
                            android:textSize="14sp"
                            android:textStyle="normal"
                            android:layout_marginTop="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="JPG, PNG up to 10MB"
                            android:textColor="@color/slate_400"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <!-- Image preview -->
                    <ImageView
                        android:id="@+id/mainImageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:visibility="gone" />

                    <!-- Remove button for main image -->
                    <ImageView
                        android:id="@+id/btnRemoveMainImage"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_close"
                        android:tint="@color/white"
                        android:background="@drawable/bg_round_black"
                        android:layout_gravity="top|end"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:visibility="gone"
                        android:clickable="true"
                        android:focusable="true" />

                </FrameLayout>

                <!-- Thumbnails Grid -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp">

                    <!-- Existing Image Thumbnail -->
                    <FrameLayout
                        android:id="@+id/thumbnailContainer"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/bg_product_image"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/thumbnailImageView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop" />

                        <!-- Remove Button -->
                        <ImageView
                            android:id="@+id/btnRemoveImage"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_close"
                            android:tint="@color/white"
                            android:background="@drawable/bg_round_black"
                            android:layout_gravity="top|end"
                            android:layout_marginTop="-8dp"
                            android:layout_marginEnd="-8dp"
                            android:clickable="true"
                            android:focusable="true" />

                    </FrameLayout>

                    <!-- Add More Thumbnail -->
                    <LinearLayout
                        android:id="@+id/addMoreImage"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/bg_upload_area"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_add"
                            android:tint="@color/slate_400" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Basic Information Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_section_card"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Basic Information"
                    android:textColor="@color/slate_900"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:layout_marginBottom="16dp" />

                <!-- Tile Name -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tile Name *"
                        android:textColor="@color/slate_700"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        android:layout_marginBottom="4dp" />

                    <EditText
                        android:id="@+id/editTileName"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="e.g., Carrara Marble White"
                        android:textColor="@color/slate_900"
                        android:textColorHint="@color/slate_400"
                        android:textSize="16sp"
                        android:background="@drawable/bg_edittext"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:maxLines="1" />

                </LinearLayout>

                <!-- Category and Size -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <!-- Category -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Category *"
                            android:textColor="@color/slate_700"
                            android:textSize="14sp"
                            android:textStyle="normal"
                            android:layout_marginBottom="4dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@drawable/bg_edittext"
                            android:gravity="center_vertical"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp">

                            <Spinner
                                android:id="@+id/spinnerCategory"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:spinnerMode="dropdown" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Size -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Size *"
                            android:textColor="@color/slate_700"
                            android:textSize="14sp"
                            android:textStyle="normal"
                            android:layout_marginBottom="4dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@drawable/bg_edittext"
                            android:gravity="center_vertical"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp">

                            <Spinner
                                android:id="@+id/spinnerSize"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:spinnerMode="dropdown" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <!-- Brand Name -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Brand Name"
                        android:textColor="@color/slate_700"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(Optional)"
                        android:textColor="@color/slate_400"
                        android:textSize="12sp"
                        android:layout_marginBottom="4dp" />

                    <EditText
                        android:id="@+id/editBrandName"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="e.g., Kajaria, Somany"
                        android:textColor="@color/slate_900"
                        android:textColorHint="@color/slate_400"
                        android:textSize="16sp"
                        android:background="@drawable/bg_edittext"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:maxLines="1" />

                </LinearLayout>

            </LinearLayout>

            <!-- Specifications Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_section_card"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Specifications"
                    android:textColor="@color/slate_900"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:layout_marginBottom="16dp" />

                <!-- Finish Type -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Finish Type"
                        android:textColor="@color/slate_700"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <Button
                            android:id="@+id/btnFinishGlossy"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="Glossy"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:textStyle="normal"
                            android:background="@drawable/bg_chip_selected"
                            android:paddingHorizontal="16dp"
                            android:layout_marginEnd="8dp"
                            android:stateListAnimator="@null" />

                        <Button
                            android:id="@+id/btnFinishMatte"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="Matte"
                            android:textColor="@color/slate_600"
                            android:textSize="14sp"
                            android:textStyle="normal"
                            android:background="@drawable/bg_chip_unselected"
                            android:paddingHorizontal="16dp"
                            android:layout_marginEnd="8dp"
                            android:stateListAnimator="@null" />

                        <Button
                            android:id="@+id/btnFinishSatin"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="Satin"
                            android:textColor="@color/slate_600"
                            android:textSize="14sp"
                            android:textStyle="normal"
                            android:background="@drawable/bg_chip_unselected"
                            android:paddingHorizontal="16dp"
                            android:layout_marginEnd="8dp"
                            android:stateListAnimator="@null" />

                        <Button
                            android:id="@+id/btnFinishRustic"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="Rustic"
                            android:textColor="@color/slate_600"
                            android:textSize="14sp"
                            android:textStyle="normal"
                            android:background="@drawable/bg_chip_unselected"
                            android:paddingHorizontal="16dp"
                            android:stateListAnimator="@null" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Primary Color -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Primary Color"
                        android:textColor="@color/slate_700"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <Button
                            android:id="@+id/btnColorWhite"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="White"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:textStyle="normal"
                            android:background="@drawable/bg_chip_selected"
                            android:paddingHorizontal="16dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="8dp"
                            android:stateListAnimator="@null" />

                        <Button
                            android:id="@+id/btnColorBeige"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="Beige"
                            android:textColor="@color/slate_600"
                            android:textSize="14sp"
                            android:textStyle="normal"
                            android:background="@drawable/bg_chip_unselected"
                            android:paddingHorizontal="16dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="8dp"
                            android:stateListAnimator="@null" />

                        <Button
                            android:id="@+id/btnColorGrey"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="Grey"
                            android:textColor="@color/slate_600"
                            android:textSize="14sp"
                            android:textStyle="normal"
                            android:background="@drawable/bg_chip_unselected"
                            android:paddingHorizontal="16dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="8dp"
                            android:stateListAnimator="@null" />

                        <Button
                            android:id="@+id/btnColorBlack"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="Black"
                            android:textColor="@color/slate_600"
                            android:textSize="14sp"
                            android:textStyle="normal"
                            android:background="@drawable/bg_chip_unselected"
                            android:paddingHorizontal="16dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="8dp"
                            android:stateListAnimator="@null" />

                        <Button
                            android:id="@+id/btnColorOther"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="Other +"
                            android:textColor="@color/slate_600"
                            android:textSize="14sp"
                            android:textStyle="normal"
                            android:background="@drawable/bg_chip_unselected"
                            android:paddingHorizontal="16dp"
                            android:layout_marginBottom="8dp"
                            android:stateListAnimator="@null" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Inventory & Pricing Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_section_card"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Inventory &amp; Pricing"
                    android:textColor="@color/slate_900"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Price -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Price (per sq/ft)"
                            android:textColor="@color/slate_700"
                            android:textSize="14sp"
                            android:textStyle="normal"
                            android:layout_marginBottom="4dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@drawable/bg_edittext"
                            android:gravity="center_vertical"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$"
                                android:textColor="@color/slate_500"
                                android:textSize="16sp"
                                android:textStyle="normal"
                                android:layout_marginEnd="8dp" />

                            <EditText
                                android:id="@+id/editPrice"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="0.00"
                                android:textColor="@color/slate_900"
                                android:textColorHint="@color/slate_400"
                                android:textSize="16sp"
                                android:background="@android:color/transparent"
                                android:inputType="numberDecimal"
                                android:maxLines="1" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Stock -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Stock (Boxes)"
                            android:textColor="@color/slate_700"
                            android:textSize="14sp"
                            android:textStyle="normal"
                            android:layout_marginBottom="4dp" />

                        <EditText
                            android:id="@+id/editStock"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:hint="0"
                            android:textColor="@color/slate_900"
                            android:textColorHint="@color/slate_400"
                            android:textSize="16sp"
                            android:background="@drawable/bg_edittext"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:inputType="number"
                            android:maxLines="1" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Description Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_section_card"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textColor="@color/slate_900"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:layout_marginBottom="12dp" />

                <EditText
                    android:id="@+id/editDescription"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:hint="Enter product details, usage, or notes..."
                    android:textColor="@color/slate_900"
                    android:textColorHint="@color/slate_400"
                    android:textSize="16sp"
                    android:background="@drawable/bg_edittext"
                    android:padding="16dp"
                    android:gravity="top"
                    android:maxLines="10" />

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/slate_200"
                    android:layout_marginVertical="16dp" />

                <!-- Active Status -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Active Status"
                            android:textColor="@color/slate_900"
                            android:textSize="16sp"
                            android:textStyle="normal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Visible in showroom catalog"
                            android:textColor="@color/slate_500"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <!-- Toggle Switch -->
                    <Switch
                        android:id="@+id/switchActive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:thumbTint="@color/white"
                        android:trackTint="@color/slate_200"
                        android:trackTintMode="multiply" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Footer Buttons -->
    <LinearLayout
        android:id="@+id/footerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="16dp"
        android:elevation="8dp"
        android:layout_alignParentBottom="true">

        <!-- Save Button -->
        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Save Product"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="normal"
            android:drawableStart="@drawable/ic_save"
            android:drawablePadding="8dp"
            android:background="@drawable/bg_save_button"
            android:layout_marginBottom="12dp"
            android:stateListAnimator="@null" />

        <!-- Cancel Button -->
        <Button
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Cancel"
            android:textColor="@color/slate_600"
            android:textSize="16sp"
            android:textStyle="normal"
            android:background="@drawable/bg_cancel_button"
            android:stateListAnimator="@null" />

    </LinearLayout>

</RelativeLayout>