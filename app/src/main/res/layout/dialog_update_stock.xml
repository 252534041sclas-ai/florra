<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Stock Quantity"
        android:textColor="@color/primary_color"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Stock:"
            android:textColor="@color/zinc_600"
            android:textSize="14sp"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/tvCurrentStock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="120"
            android:textColor="@color/primary_color"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Boxes"
            android:textColor="@color/zinc_500"
            android:textSize="12sp"
            android:layout_marginStart="4dp" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Stock Quantity:"
        android:textColor="@color/zinc_600"
        android:textSize="14sp"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/etNewStock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter quantity"
        android:text="120"
        android:textColor="@color/primary_color"
        android:textColorHint="@color/zinc_400"
        android:textSize="16sp"
        android:background="@drawable/bg_edittext"
        android:padding="12dp"
        android:maxLines="1"
        android:inputType="number" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stock Adjustment:"
        android:textColor="@color/zinc_600"
        android:textSize="14sp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnDecrease"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="-"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@drawable/bg_stock_adjust"
            android:layout_marginEnd="12dp" />

        <TextView
            android:id="@+id/tvAdjustAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/primary_color"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginHorizontal="16dp" />

        <Button
            android:id="@+id/btnIncrease"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="+"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@drawable/bg_stock_adjust"
            android:layout_marginStart="12dp" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reason (Optional):"
        android:textColor="@color/zinc_600"
        android:textSize="14sp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/etReason"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:hint="Enter reason for stock adjustment"
        android:textColor="@color/primary_color"
        android:textColorHint="@color/zinc_400"
        android:textSize="14sp"
        android:background="@drawable/bg_edittext"
        android:padding="12dp"
        android:gravity="top"
        android:maxLines="3" />

</LinearLayout>