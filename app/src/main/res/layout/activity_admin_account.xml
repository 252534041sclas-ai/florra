<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <!-- Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/surface_light"
        android:elevation="4dp"
        android:paddingTop="8dp"
        android:paddingBottom="12dp">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:background="@drawable/bg_rounded_button"
            android:text="←"
            android:textColor="@color/primary_color"
            android:textSize="20sp"
            android:stateListAnimator="@null" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Admin Account"
            android:textColor="@color/primary_color"
            android:textSize="18sp"
            android:textStyle="bold"
            android:letterSpacing="-0.02" />

        <View
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp" />

    </RelativeLayout>

    <!-- Main Content Scrollable Area -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="80dp">

            <!-- Profile Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/surface_light"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="24dp"
                android:padding="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <!-- Profile Image Container -->
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:id="@+id/ivProfile"
                            android:layout_width="96dp"
                            android:layout_height="96dp"
                            android:background="@drawable/bg_profile_image"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_profile_placeholder" />

                        <!-- Edit Button -->
                        <Button
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_alignBottom="@id/ivProfile"
                            android:layout_alignEnd="@id/ivProfile"
                            android:background="@drawable/bg_edit_button"
                            android:text="✎"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:stateListAnimator="@null" />

                    </RelativeLayout>

                    <!-- Name -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="John Doe"
                        android:textColor="@color/primary_color"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <!-- Shop Name -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Marble City Showroom"
                        android:textColor="@color/zinc_600"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        android:layout_marginBottom="4dp" />

                    <!-- Email -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="john.doe@marblecity.com"
                        android:textColor="@color/zinc_500"
                        android:textSize="12sp"
                        android:layout_marginBottom="16dp" />

                    <!-- Admin Access Badge -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_admin_badge"
                        android:gravity="center"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="6dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_verified"
                            android:tint="@color/primary_color"
                            android:layout_marginEnd="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Admin Access"
                            android:textColor="@color/primary_color"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.1" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Shop Management Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SHOP MANAGEMENT"
                android:textColor="@color/zinc_500"
                android:textSize="10sp"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp" />

            <!-- Shop Management Cards -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <!-- Edit Shop Profile Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardEditShop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/surface_light"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <!-- Icon -->
                        <LinearLayout
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/bg_icon_container"
                            android:gravity="center"
                            android:layout_marginEnd="16dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_storefront"
                                android:tint="@color/primary_color" />

                        </LinearLayout>

                        <!-- Text Content -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Edit Shop Profile"
                                android:textColor="@color/primary_color"
                                android:textSize="16sp"
                                android:textStyle="normal" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Logo, Address, Contact Info"
                                android:textColor="@color/zinc_500"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <!-- Chevron -->
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_chevron_right"
                            android:tint="@color/zinc_400" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/zinc_200"
                    android:layout_marginStart="72dp"
                    android:layout_marginEnd="16dp" />

                <!-- Business Information Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardBusinessInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/surface_light"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <!-- Icon -->
                        <LinearLayout
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/bg_icon_container"
                            android:gravity="center"
                            android:layout_marginEnd="16dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_domain"
                                android:tint="@color/primary_color" />

                        </LinearLayout>

                        <!-- Text Content -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Business Information"
                                android:textColor="@color/primary_color"
                                android:textSize="16sp"
                                android:textStyle="normal" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tax ID, Registration, Banking"
                                android:textColor="@color/zinc_500"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <!-- Chevron -->
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_chevron_right"
                            android:tint="@color/zinc_400" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/zinc_200"
                    android:layout_marginStart="72dp"
                    android:layout_marginEnd="16dp" />

                <!-- Manage Staff Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardManageStaff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/surface_light"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <!-- Icon -->
                        <LinearLayout
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/bg_icon_container"
                            android:gravity="center"
                            android:layout_marginEnd="16dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_group"
                                android:tint="@color/primary_color" />

                        </LinearLayout>

                        <!-- Text Content -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Manage Staff"
                                android:textColor="@color/primary_color"
                                android:textSize="16sp"
                                android:textStyle="normal" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Roles, Permissions, Invites"
                                android:textColor="@color/zinc_500"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <!-- Chevron -->
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_chevron_right"
                            android:tint="@color/zinc_400" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- System & Support Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SYSTEM &amp; SUPPORT"
                android:textColor="@color/zinc_500"
                android:textSize="10sp"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp" />

            <!-- System & Support Cards -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <!-- Security & Access Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardSecurity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/surface_light"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"/>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/zinc_200"
                    android:layout_marginStart="72dp"
                    android:layout_marginEnd="16dp" />

                <!-- App Settings Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardAppSettings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/surface_light"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"/>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/zinc_200"
                    android:layout_marginStart="72dp"
                    android:layout_marginEnd="16dp" />

                <!-- Help & Support Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardHelp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/surface_light"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <!-- Icon -->
                        <LinearLayout
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/bg_icon_container"
                            android:gravity="center"
                            android:layout_marginEnd="16dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_help"
                                android:tint="@color/primary_color" />

                        </LinearLayout>

                        <!-- Text Content -->
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Help &amp; Support"
                            android:textColor="@color/primary_color"
                            android:textSize="16sp"
                            android:textStyle="normal" />

                        <!-- Chevron -->
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_chevron_right"
                            android:tint="@color/zinc_400" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/zinc_200"
                    android:layout_marginStart="72dp"
                    android:layout_marginEnd="16dp" />

                <!-- About Florra Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardAbout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/surface_light"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <!-- Icon -->
                        <LinearLayout
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/bg_icon_container"
                            android:gravity="center"
                            android:layout_marginEnd="16dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_info"
                                android:tint="@color/primary_color" />

                        </LinearLayout>

                        <!-- Text Content -->
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="About Florra"
                            android:textColor="@color/primary_color"
                            android:textSize="16sp"
                            android:textStyle="normal" />

                        <!-- Chevron -->
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_chevron_right"
                            android:tint="@color/zinc_400" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Log Out Button -->
            <Button
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_logout_button"
                android:text="Log Out"
                android:textColor="@color/primary_color"
                android:textSize="16sp"
                android:textStyle="bold"
                android:drawableStart="@drawable/ic_logout"
                android:drawablePadding="12dp"
                android:padding="16dp"
                android:gravity="center"
                android:stateListAnimator="@null" />

            <!-- Version Info -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Version 2.4.0 (Build 18)"
                android:textColor="@color/zinc_500"
                android:textSize="10sp"
                android:layout_gravity="center"
                android:layout_marginTop="16dp" />

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="@color/surface_light"
        android:elevation="8dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingHorizontal="24dp">

            <!-- Dashboard -->
            <Button
                android:id="@+id/bottomDashboard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:textColor="@color/zinc_400"
                android:textSize="11sp"
                android:drawableTop="@drawable/ic_grid_view"
                android:drawablePadding="4dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="Dashboard"
                android:gravity="center"
                android:stateListAnimator="@null" />

            <!-- Inventory -->
            <Button
                android:id="@+id/bottomInventory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:textColor="@color/zinc_400"
                android:textSize="11sp"
                android:drawableTop="@drawable/ic_grid_view"
                android:drawablePadding="4dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="Catlog"
                android:gravity="center"
                android:stateListAnimator="@null" />

            <!-- Quotes -->
            <Button
                android:id="@+id/bottomQuotes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:textColor="@color/zinc_400"
                android:textSize="11sp"
                android:drawableTop="@drawable/ic_request_quote"
                android:drawablePadding="4dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="Quotes"
                android:gravity="center"
                android:stateListAnimator="@null" />

            <!-- Account (Active) -->
            <Button
                android:id="@+id/bottomAccount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:textColor="@color/primary_color"
                android:textSize="11sp"
                android:textStyle="bold"
                android:drawableTop="@drawable/ic_person_filled"
                android:drawablePadding="4dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="Account"
                android:gravity="center"
                android:stateListAnimator="@null" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>