<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:elevation="4dp">

        <!-- Status Bar Spacer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:background="@color/white" />

        <!-- Toolbar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:paddingTop="4dp">

            <!-- Back Button -->
            <RelativeLayout
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_circle_icon"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_arrow_back"
                    android:tint="@color/slate_900"
                    android:layout_centerInParent="true" />
            </RelativeLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Quotations"
                android:textColor="@color/slate_900"
                android:textSize="20sp"
                android:textStyle="bold"
                android:letterSpacing="-0.02" />

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- Empty space for alignment -->
            <View
                android:layout_width="40dp"
                android:layout_height="40dp" />

        </LinearLayout>
    </LinearLayout>

    <!-- Filter Tabs -->
    <HorizontalScrollView
        android:id="@+id/tabsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:background="@color/white"
        android:paddingVertical="12dp"
        android:paddingHorizontal="16dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- All Tab -->
            <LinearLayout
                android:id="@+id/tabAll"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/bg_tab_active"
                android:paddingHorizontal="20dp"
                android:layout_marginEnd="8dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Pending Tab -->
            <LinearLayout
                android:id="@+id/tabPending"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/bg_tab_inactive"
                android:paddingHorizontal="20dp"
                android:layout_marginEnd="8dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pending"
                    android:textColor="@color/slate_600"
                    android:textSize="14sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <!-- Approved Tab -->
            <LinearLayout
                android:id="@+id/tabApproved"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/bg_tab_inactive"
                android:paddingHorizontal="20dp"
                android:layout_marginEnd="8dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Approved"
                    android:textColor="@color/slate_600"
                    android:textSize="14sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <!-- Rejected Tab -->
            <LinearLayout
                android:id="@+id/tabRejected"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/bg_tab_inactive"
                android:paddingHorizontal="20dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rejected"
                    android:textColor="@color/slate_600"
                    android:textSize="14sp"
                    android:textStyle="normal" />
            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>

    <!-- Content Area -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tabsContainer"
        android:layout_above="@+id/bottomNav"
        android:fillViewport="true"
        android:padding="16dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="80dp">

            <!-- Quotation Card 1 - Pending -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_quotation_card"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true">

                <!-- Header Section -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp">

                    <!-- Left Side: Icon and Details -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_alignParentStart="true">

                        <!-- Icon -->
                        <RelativeLayout
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/bg_grey_circle"
                            android:layout_marginEnd="12dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_pending"
                                android:tint="@color/slate_600"
                                android:layout_centerInParent="true" />
                        </RelativeLayout>

                        <!-- Details -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ID #Q-2023-849"
                                android:textColor="@color/slate_500"
                                android:textSize="10sp"
                                android:textStyle="bold"
                                android:letterSpacing="0.05" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$4,250.00"
                                android:textColor="@color/slate_900"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Status Badge -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:background="@drawable/bg_status_pending"
                        android:paddingHorizontal="12dp"
                        android:layout_alignParentEnd="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pending"
                            android:textColor="@color/slate_600"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </RelativeLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/slate_200"
                    android:layout_marginBottom="12dp" />

                <!-- Footer Section -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Date -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_alignParentStart="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Date Issued"
                            android:textColor="@color/slate_400"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Oct 24, 2023"
                            android:textColor="@color/slate_700"
                            android:textSize="14sp"
                            android:textStyle="normal"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <!-- View Details Button -->
                    <LinearLayout
                        android:id="@+id/btnViewDetails1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_alignParentEnd="true"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View Details"
                            android:textColor="@color/slate_900"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_arrow_forward"
                            android:tint="@color/slate_900"
                            android:layout_marginStart="4dp" />
                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

            <!-- Quotation Card 2 - Approved -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_quotation_card"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true">

                <!-- Header Section -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp">

                    <!-- Left Side: Icon and Details -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_alignParentStart="true">

                        <!-- Icon -->
                        <RelativeLayout
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/bg_black_circle"
                            android:layout_marginEnd="12dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_verified"
                                android:tint="@color/white"
                                android:layout_centerInParent="true" />
                        </RelativeLayout>

                        <!-- Details -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ID #Q-2023-845"
                                android:textColor="@color/slate_500"
                                android:textSize="10sp"
                                android:textStyle="bold"
                                android:letterSpacing="0.05" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$1,200.00"
                                android:textColor="@color/slate_900"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Status Badge -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:background="@drawable/bg_status_approved"
                        android:paddingHorizontal="12dp"
                        android:layout_alignParentEnd="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Approved"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </RelativeLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/slate_200"
                    android:layout_marginBottom="12dp" />

                <!-- Footer Section -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Date -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_alignParentStart="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Date Issued"
                            android:textColor="@color/slate_400"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Oct 20, 2023"
                            android:textColor="@color/slate_700"
                            android:textSize="14sp"
                            android:textStyle="normal"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <!-- View Details Button -->
                    <LinearLayout
                        android:id="@+id/btnViewDetails2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_alignParentEnd="true"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View Details"
                            android:textColor="@color/slate_900"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_arrow_forward"
                            android:tint="@color/slate_900"
                            android:layout_marginStart="4dp" />
                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

            <!-- Quotation Card 3 - Rejected -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_quotation_card"
                android:padding="16dp"
                android:clickable="true"
                android:focusable="true">

                <!-- Header Section -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp">

                    <!-- Left Side: Icon and Details -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_alignParentStart="true">

                        <!-- Icon -->
                        <RelativeLayout
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/bg_grey_circle"
                            android:layout_marginEnd="12dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_block"
                                android:tint="@color/slate_400"
                                android:layout_centerInParent="true" />
                        </RelativeLayout>

                        <!-- Details -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ID #Q-2023-830"
                                android:textColor="@color/slate_500"
                                android:textSize="10sp"
                                android:textStyle="bold"
                                android:letterSpacing="0.05" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$850.00"
                                android:textColor="@color/slate_900"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Status Badge -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:background="@drawable/bg_status_rejected"
                        android:paddingHorizontal="12dp"
                        android:layout_alignParentEnd="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rejected"
                            android:textColor="@color/slate_500"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </RelativeLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/slate_200"
                    android:layout_marginBottom="12dp" />

                <!-- Footer Section -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Date -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_alignParentStart="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Date Issued"
                            android:textColor="@color/slate_400"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Oct 15, 2023"
                            android:textColor="@color/slate_700"
                            android:textSize="14sp"
                            android:textStyle="normal"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <!-- View Details Button -->
                    <LinearLayout
                        android:id="@+id/btnViewDetails3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_alignParentEnd="true"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View Details"
                            android:textColor="@color/slate_900"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_arrow_forward"
                            android:tint="@color/slate_900"
                            android:layout_marginStart="4dp" />
                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_bottom_nav"
        android:layout_alignParentBottom="true"
        android:elevation="8dp">

        <!-- Navigation Items -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="24dp"
            android:paddingTop="8dp"
            android:paddingBottom="12dp">

            <!-- Home -->
            <LinearLayout
                android:id="@+id/btnNavHome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_home"
                    android:tint="@color/slate_400" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:textColor="@color/slate_400"
                    android:textSize="10sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Catalog -->
            <LinearLayout
                android:id="@+id/btnNavCatalog"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_grid_view"
                    android:tint="@color/slate_400" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Catalog"
                    android:textColor="@color/slate_400"
                    android:textSize="10sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Enquiries -->
            <LinearLayout
                android:id="@+id/btnNavEnquiries"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_chat_bubble"
                    android:tint="@color/primary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quotations"
                    android:textColor="@color/primary"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.05"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Account -->
            <LinearLayout
                android:id="@+id/btnNavAccount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_person_outline"
                    android:tint="@color/slate_400" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Account"
                    android:textColor="@color/slate_400"
                    android:textSize="10sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Bottom Safe Area Spacer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:background="@color/white" />
    </LinearLayout>

    <!-- Bottom Indicator -->

</RelativeLayout>