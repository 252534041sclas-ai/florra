<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/calc_gray_50"
    android:fitsSystemWindows="true">

    <!-- Header with Account Title -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/calc_gray_50"
        android:elevation="4dp">

        <!-- Status Bar Spacer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:background="@color/calc_gray_50" />

        <!-- Toolbar with Account Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:gravity="center_vertical"
            android:background="@color/calc_gray_50">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Account"
                android:textColor="@color/slate_900"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:letterSpacing="-0.01" />
        </LinearLayout>
    </LinearLayout>

    <!-- Main Content ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:layout_above="@+id/bottomNav"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Profile Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginBottom="32dp">

                <!-- Profile Image Container -->
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">

                    <!-- Profile Image -->
                    <RelativeLayout
                        android:id="@+id/profileImageContainer"
                        android:layout_width="112dp"
                        android:layout_height="112dp"
                        android:background="@drawable/bg_profile_circle">

                        <!-- Placeholder for profile image -->
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_person"
                            android:scaleType="centerCrop"
                            android:contentDescription="Profile Image"
                            android:tint="@color/slate_400" />

                    </RelativeLayout>

                    <!-- Edit Button Overlay -->
                    <RelativeLayout
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/bg_edit_button"
                        android:layout_alignBottom="@id/profileImageContainer"
                        android:layout_alignRight="@id/profileImageContainer"
                        android:layout_marginRight="-8dp"
                        android:layout_marginBottom="8dp"
                        android:elevation="4dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:id="@+id/btnEditProfile">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_edit"
                            android:tint="@color/white"
                            android:layout_centerInParent="true" />

                    </RelativeLayout>
                </RelativeLayout>

                <!-- Name -->
                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alex Morgan"
                    android:textColor="@color/slate_900"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"
                    android:letterSpacing="-0.02" />

                <!-- Email -->
                <TextView
                    android:id="@+id/tvUserEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="alex.morgan@florra.design"
                    android:textColor="@color/slate_500"
                    android:textSize="14sp"
                    android:layout_marginBottom="12dp" />

                <!-- Premium Badge -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_premium_badge"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_diamond"
                        android:tint="@color/black"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PREMIUM MEMBER"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.05" />
                </LinearLayout>
            </LinearLayout>

            <!-- Settings Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <!-- Section Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SETTINGS"
                    android:textColor="@color/slate_400"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.05"
                    android:layout_marginBottom="12dp"
                    android:layout_marginLeft="4dp" />

                <!-- Settings Cards Container -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_settings_card"
                    android:elevation="1dp">

                    <!-- Edit Profile Button -->
                    <RelativeLayout
                        android:id="@+id/btnEditProfileSettings"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:paddingHorizontal="16dp"
                            android:gravity="center_vertical">

                            <!-- Icon Container -->
                            <RelativeLayout
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/bg_icon_circle_grey"
                                android:layout_marginEnd="16dp">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_person"
                                    android:tint="@color/slate_600"
                                    android:layout_centerInParent="true" />
                            </RelativeLayout>

                            <!-- Text -->
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Edit Profile"
                                android:textColor="@color/slate_900"
                                android:textSize="16sp"
                                android:textStyle="normal" />

                            <!-- Chevron -->
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_chevron_right"
                                android:tint="@color/slate_300" />
                        </LinearLayout>
                    </RelativeLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/slate_100"
                        android:layout_marginHorizontal="16dp" />

                    <!-- Change Password Button -->
                    <RelativeLayout
                        android:id="@+id/btnChangePassword"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:paddingHorizontal="16dp"
                            android:gravity="center_vertical">

                            <!-- Icon Container -->
                            <RelativeLayout
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/bg_icon_circle_grey"
                                android:layout_marginEnd="16dp">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_lock"
                                    android:tint="@color/slate_600"
                                    android:layout_centerInParent="true" />
                            </RelativeLayout>

                            <!-- Text -->
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Change Password"
                                android:textColor="@color/slate_900"
                                android:textSize="16sp"
                                android:textStyle="normal" />

                            <!-- Chevron -->
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_chevron_right"
                                android:tint="@color/slate_300" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Support Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <!-- Section Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SUPPORT"
                    android:textColor="@color/slate_400"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.05"
                    android:layout_marginBottom="12dp"
                    android:layout_marginLeft="4dp" />

                <!-- Support Cards Container -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_settings_card"
                    android:elevation="1dp">

                    <!-- Help & Support Button -->
                    <RelativeLayout
                        android:id="@+id/btnHelpSupport"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:paddingHorizontal="16dp"
                            android:gravity="center_vertical">

                            <!-- Icon Container -->
                            <RelativeLayout
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/bg_icon_circle_grey"
                                android:layout_marginEnd="16dp">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_help"
                                    android:tint="@color/slate_600"
                                    android:layout_centerInParent="true" />
                            </RelativeLayout>

                            <!-- Text -->
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Help &amp; Support"
                                android:textColor="@color/slate_900"
                                android:textSize="16sp"
                                android:textStyle="normal" />

                            <!-- Chevron -->
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_chevron_right"
                                android:tint="@color/slate_300" />
                        </LinearLayout>
                    </RelativeLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/slate_100"
                        android:layout_marginHorizontal="16dp" />

                    <!-- About Florra Button -->
                    <RelativeLayout
                        android:id="@+id/btnAboutFlorra"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:paddingHorizontal="16dp"
                            android:gravity="center_vertical">

                            <!-- Icon Container -->
                            <RelativeLayout
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/bg_icon_circle_grey"
                                android:layout_marginEnd="16dp">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_info"
                                    android:tint="@color/slate_600"
                                    android:layout_centerInParent="true" />
                            </RelativeLayout>

                            <!-- Text -->
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="About Florra"
                                android:textColor="@color/slate_900"
                                android:textSize="16sp"
                                android:textStyle="normal" />

                            <!-- Chevron -->
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_chevron_right"
                                android:tint="@color/slate_300" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Logout Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="32dp">

                <!-- Logout Card -->
                <RelativeLayout
                    android:id="@+id/btnLogout"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/bg_logout_card"
                    android:elevation="1dp"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:paddingHorizontal="16dp"
                        android:gravity="center_vertical">

                        <!-- Icon Container -->
                        <RelativeLayout
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/bg_icon_circle_red"
                            android:layout_marginEnd="16dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/bg_logout_card"
                                android:tint="@color/red_500"
                                android:layout_centerInParent="true" />
                        </RelativeLayout>

                        <!-- Text -->
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Logout"
                            android:textColor="@color/red_600"
                            android:textSize="16sp"
                            android:textStyle="normal" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <!-- App Info Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginBottom="80dp">

                <!-- App Icon -->
                <RelativeLayout
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_app_icon"
                    android:layout_marginBottom="12dp"
                    android:elevation="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="F"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_centerInParent="true" />
                </RelativeLayout>

                <!-- Version Info -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Florra for Customer v2.4.0"
                    android:textColor="@color/slate_400"
                    android:textSize="12sp"
                    android:layout_marginBottom="4dp" />

                <!-- Copyright -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Â© 2024 Florra Designs Inc."
                    android:textColor="@color/slate_400"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation (Same as home) -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_bottom_nav"
        android:layout_alignParentBottom="true"
        android:elevation="8dp">

        <!-- Navigation Items -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="24dp"
            android:paddingTop="8dp"
            android:paddingBottom="12dp">

            <!-- Home -->
            <LinearLayout
                android:id="@+id/btnNavHome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_home"
                    android:tint="@color/slate_400" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:textColor="@color/slate_400"
                    android:textSize="10sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Catalog -->
            <LinearLayout
                android:id="@+id/btnNavCatalog"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_grid_view"
                    android:tint="@color/slate_400" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Catalog"
                    android:textColor="@color/slate_400"
                    android:textSize="10sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Enquiries -->
            <LinearLayout
                android:id="@+id/btnNavEnquiries"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <!-- Notification Dot -->

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_chat_bubble"
                        android:tint="@color/slate_400" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quotations"
                    android:textColor="@color/slate_400"
                    android:textSize="10sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Account (Active) -->
            <LinearLayout
                android:id="@+id/btnNavAccount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_person"
                    android:tint="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Account"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.05"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Bottom Safe Area Spacer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:background="@color/white" />
    </LinearLayout>

</RelativeLayout>