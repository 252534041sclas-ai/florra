<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light"
    android:fitsSystemWindows="true">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/background_light"
        android:elevation="4dp">

        <!-- Title Bar -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp">

            <!-- Back Button -->
            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_arrow_back"
                android:tint="@color/primary_color"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:padding="8dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true" />

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enquiries"
                android:textColor="@color/primary_color"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_centerInParent="true" />

        </RelativeLayout>

        <!-- Search Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingBottom="12dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@drawable/bg_search_bar"
                android:gravity="center_vertical"
                android:paddingHorizontal="12dp">

                <!-- Search Icon -->
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_search"
                    android:tint="@color/zinc_400"
                    android:layout_marginEnd="8dp" />

                <!-- Search Input -->
                <EditText
                    android:id="@+id/etSearch"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="Search by name, ID or tile..."
                    android:textColor="@color/primary_color"
                    android:textColorHint="@color/zinc_400"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:imeOptions="actionSearch"
                    android:paddingVertical="12dp" />

                <!-- Filter Button -->

            </LinearLayout>

        </LinearLayout>

        <!-- Filter Tabs -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:paddingBottom="8dp"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/llFilterTabs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="4dp">

                <!-- All Tab -->
                <LinearLayout
                    android:id="@+id/btnAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_filter_tab_selected"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="16dp"
                    android:gravity="center"
                    android:layout_marginEnd="8dp"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="All"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="normal" />

                </LinearLayout>

                <!-- New Tab -->
                <LinearLayout
                    android:id="@+id/btnNew"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_filter_tab_unselected"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="16dp"
                    android:gravity="center"
                    android:layout_marginEnd="8dp"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New"
                        android:textColor="@color/zinc_600"
                        android:textSize="14sp"
                        android:textStyle="normal" />

                    <!-- Badge -->
                    <TextView
                        android:id="@+id/badgeNew"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginStart="4dp"
                        android:background="@drawable/bg_badge"
                        android:gravity="center"
                        android:text="3"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Quoted Tab -->
                <LinearLayout
                    android:id="@+id/btnQuoted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_filter_tab_unselected"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="16dp"
                    android:gravity="center"
                    android:layout_marginEnd="8dp"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quoted"
                        android:textColor="@color/zinc_600"
                        android:textSize="14sp"
                        android:textStyle="normal" />

                </LinearLayout>

                <!-- Follow-up Tab -->
                <LinearLayout
                    android:id="@+id/btnFollowUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_filter_tab_unselected"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="16dp"
                    android:gravity="center"
                    android:layout_marginEnd="8dp"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Follow-up"
                        android:textColor="@color/zinc_600"
                        android:textSize="14sp"
                        android:textStyle="normal" />

                </LinearLayout>

                <!-- Resolved Tab -->
                <LinearLayout
                    android:id="@+id/btnResolved"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_filter_tab_unselected"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="16dp"
                    android:gravity="center"
                    android:layout_marginEnd="8dp"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Resolved"
                        android:textColor="@color/zinc_600"
                        android:textSize="14sp"
                        android:textStyle="normal" />

                </LinearLayout>

            </LinearLayout>

        </HorizontalScrollView>

    </LinearLayout>

    <!-- Main Content - ScrollView with Enquiry Items -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:clipToPadding="false">

        <LinearLayout
            android:id="@+id/llEnquiriesContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:paddingBottom="80dp">

            <!-- New Section Header -->
            <TextView
                android:id="@+id/tvNewHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New"
                android:textColor="@color/primary_color"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <!-- Michael Foster Enquiry Item -->
            <include
                android:id="@+id/itemMichael"
                layout="@layout/item_enquiry" />

            <!-- Quoted Section Header -->
            <TextView
                android:id="@+id/tvQuotedHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quoted"
                android:textColor="@color/primary_color"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp" />

            <!-- Sarah Jenkins Enquiry Item (Customized) -->
            <include
                android:id="@+id/itemSarah"
                layout="@layout/item_enquiry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Site Visit Section Header -->
            <TextView
                android:id="@+id/tvSiteVisitHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Site Visit"
                android:textColor="@color/primary_color"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp" />

            <!-- David Chen Enquiry Item (Customized) -->
            <include
                android:id="@+id/itemDavid"
                layout="@layout/item_enquiry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Resolved Section Header -->
            <TextView
                android:id="@+id/tvResolvedHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resolved"
                android:textColor="@color/primary_color"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp" />

            <!-- Emma Wilson Enquiry Item (Customized) -->
            <include
                android:id="@+id/itemEmma"
                layout="@layout/item_enquiry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:elevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingHorizontal="24dp"
            android:paddingVertical="12dp">

            <!-- Home -->
            <Button
                android:id="@+id/btnHome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:textColor="@color/zinc_400"
                android:textSize="10sp"
                android:drawableTop="@drawable/ic_home"
                android:drawablePadding="4dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="Home"
                android:gravity="center"
                android:stateListAnimator="@null" />

            <!-- Catalog -->
            <Button
                android:id="@+id/btnCatalog"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:textColor="@color/zinc_400"
                android:textSize="10sp"
                android:drawableTop="@drawable/ic_grid_view"
                android:drawablePadding="4dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="Catalog"
                android:gravity="center"
                android:stateListAnimator="@null" />

            <!-- Enquiries (Active) -->
            <Button
                android:id="@+id/btnEnquiries"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:textColor="@color/primary_color"
                android:textSize="10sp"
                android:textStyle="bold"
                android:drawableTop="@drawable/ic_chat_bubble_filled"
                android:drawablePadding="4dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="Enquiries"
                android:gravity="center"
                android:stateListAnimator="@null" />

            <!-- Account -->
            <Button
                android:id="@+id/btnAccount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:textColor="@color/zinc_400"
                android:textSize="10sp"
                android:drawableTop="@drawable/ic_person"
                android:drawablePadding="4dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="Account"
                android:gravity="center"
                android:stateListAnimator="@null" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>