<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <!-- Main Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

        <!-- Header -->
        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:elevation="4dp"
            android:paddingTop="24dp"
            android:paddingBottom="12dp"
            android:paddingHorizontal="16dp"
            android:gravity="center_vertical">

            <!-- Back Button -->
            <RelativeLayout
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_circle_icon"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_back"
                    android:tint="@color/primary"
                    android:layout_centerInParent="true" />
            </RelativeLayout>

            <!-- Title -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tile Matcher"
                android:textColor="@color/primary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginHorizontal="8dp" />

            <!-- Empty View for balance -->
            <View
                android:layout_width="40dp"
                android:layout_height="40dp" />
        </LinearLayout>

        <!-- Main Content ScrollView -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="80dp">

                <!-- Title Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="24dp"
                    android:paddingTop="24dp"
                    android:paddingBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Find your perfect match"
                        android:textColor="@color/primary"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:letterSpacing="-0.02" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Upload a photo of a tile or a room to find similar designs in our showroom inventory."
                        android:textColor="@color/slate_500"
                        android:textSize="16sp"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

                <!-- Upload Card -->
                <LinearLayout
                    android:id="@+id/uploadCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_upload_card"
                    android:padding="24dp"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginTop="8dp"
                    android:clickable="true"
                    android:focusable="true">

                    <!-- Camera Icon -->
                    <RelativeLayout
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/bg_camera_icon"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="24dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+"
                            android:textColor="@color/primary"
                            android:textSize="40sp"
                            android:textStyle="bold"
                            android:layout_centerInParent="true" />
                    </RelativeLayout>

                    <!-- Upload Text -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tap to Upload"
                        android:textColor="@color/primary"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Supports JPG, PNG up to 10MB"
                        android:textColor="@color/slate_500"
                        android:textSize="14sp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="24dp" />

                    <!-- Choose Image Button -->
                    <RelativeLayout
                        android:id="@+id/btnChooseImage"
                        android:layout_width="200dp"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_black_button"
                        android:layout_gravity="center_horizontal"
                        android:clickable="true"
                        android:focusable="true">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_centerInParent="true">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ“"
                                android:textSize="20sp"
                                android:layout_marginEnd="8dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Choose Image"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>

                <!-- Recent Scans Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="32dp"
                    android:paddingHorizontal="24px">

                    <!-- Section Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Recent Scans"
                            android:textColor="@color/primary"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/btnViewAll"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View All"
                            android:textColor="@color/primary"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:clickable="true"
                            android:focusable="true" />
                    </LinearLayout>

                    <!-- Recent Scans Horizontal Scroll -->
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingBottom="8dp">

                            <!-- Scan 1: Marble Hexagon -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginEnd="16dp">

                                <RelativeLayout
                                    android:id="@+id/scan1"
                                    android:layout_width="128dp"
                                    android:layout_height="128dp"
                                    android:background="@drawable/bg_scan_card"
                                    android:clickable="true"
                                    android:focusable="true">

                                    <!-- Use color as placeholder for image -->
                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@color/slate_100" />

                                    <!-- Text overlay -->
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="âšª"
                                        android:textSize="40sp"
                                        android:layout_centerInParent="true" />
                                </RelativeLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Marble Hexagon"
                                    android:textColor="@color/slate_700"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="8dp"
                                    android:paddingHorizontal="4dp" />
                            </LinearLayout>

                            <!-- Scan 2: Beige Ceramic -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginEnd="16dp">

                                <RelativeLayout
                                    android:id="@+id/scan2"
                                    android:layout_width="128dp"
                                    android:layout_height="128dp"
                                    android:background="@drawable/bg_scan_card"
                                    android:clickable="true"
                                    android:focusable="true">

                                    <!-- Use color as placeholder for image -->
                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@color/orange_100" />

                                    <!-- Text overlay -->
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="ðŸŸ«"
                                        android:textSize="40sp"
                                        android:layout_centerInParent="true" />
                                </RelativeLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Beige Ceramic"
                                    android:textColor="@color/slate_700"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="8dp"
                                    android:paddingHorizontal="4dp" />
                            </LinearLayout>

                            <!-- Scan 3: Slate Grey -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:id="@+id/scan3"
                                    android:layout_width="128dp"
                                    android:layout_height="128dp"
                                    android:background="@drawable/bg_scan_card"
                                    android:clickable="true"
                                    android:focusable="true">

                                    <!-- Use color as placeholder for image -->
                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@color/slate_300" />

                                    <!-- Text overlay -->
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="âš«"
                                        android:textSize="40sp"
                                        android:layout_centerInParent="true" />
                                </RelativeLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Slate Grey"
                                    android:textColor="@color/slate_700"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="8dp"
                                    android:paddingHorizontal="4dp" />
                            </LinearLayout>
                        </LinearLayout>
                    </HorizontalScrollView>
                </LinearLayout>

                <!-- Scanning Tips Card -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_tips_card"
                    android:padding="20dp"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="24dp">

                    <!-- Icon -->
                    <RelativeLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_tips_icon"
                        android:layout_marginEnd="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ’¡"
                            android:textSize="20sp"
                            android:layout_centerInParent="true" />
                    </RelativeLayout>

                    <!-- Tips Text -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Scanning Tips"
                            android:textColor="@color/primary"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ensure the tile is well-lit and centered. Avoid glare or shadows for the most accurate inventory match."
                            android:textColor="@color/slate_500"
                            android:textSize="12sp"
                            android:lineSpacingExtra="2dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>