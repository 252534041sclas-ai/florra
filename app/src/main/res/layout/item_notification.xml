<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:layout_marginBottom="12dp"
    android:background="@drawable/bg_notification_unread"
    android:clickable="true"
    android:focusable="true">

    <!-- Icon Container -->
    <LinearLayout
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/bg_circle_slate"
        android:gravity="center">

        <ImageView
            android:id="@+id/iconImage"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_agenda"
            android:tint="@color/slate_900" />
    </LinearLayout>

    <!-- Text Content -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_gravity="center_vertical">

        <!-- Title and Time -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@+id/titleText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Quotation #204 Updated"
                android:textColor="@color/slate_900"
                android:textSize="14sp"
                android:textStyle="bold"
                android:ellipsize="end"
                android:maxLines="1" />

            <TextView
                android:id="@+id/timeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10m ago"
                android:textColor="@color/slate_500"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Message -->
        <TextView
            android:id="@+id/messageText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The pricing for the Italian Marble selection..."
            android:textColor="@color/slate_600"
            android:textSize="12sp"
            android:ellipsize="end"
            android:maxLines="2"
            android:lineSpacingExtra="2dp" />
    </LinearLayout>

    <!-- Unread Dot -->
    <View
        android:id="@+id/unreadDot"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="@drawable/bg_unread_dot"
        android:layout_gravity="center_vertical" />

</LinearLayout>