<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:fitsSystemWindows="true">

    <!-- Header Section -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:background="@color/white"
        android:elevation="4dp">

        <!-- Back button, Title and More Options -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:paddingHorizontal="16dp">

            <!-- Back Button -->
            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_back"
                android:tint="@color/primary_color"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:padding="8dp" />

            <!-- Title -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Product Details"
                android:textColor="@color/primary_color"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- More Options Button -->
            <ImageView
                android:id="@+id/btnMore"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_more_horiz"
                android:tint="@color/primary_color"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:padding="8dp" />

        </RelativeLayout>

    </LinearLayout>

    <!-- Main Content ScrollView -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerLayout"
        android:layout_above="@+id/bottomButtons"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="100dp">

            <!-- Image Carousel Section -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:paddingVertical="16dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <!-- Main View Image -->
                    <RelativeLayout
                        android:layout_width="280dp"
                        android:layout_height="320dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/bg_image_carousel"
                        android:padding="3dp">

                        <ImageView
                            android:id="@+id/ivMainView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/zinc_100"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_tile_main_view" />

                    </RelativeLayout>

                </LinearLayout>

            </HorizontalScrollView>

            <!-- Product Title and SKU -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:paddingTop="8dp"
                android:paddingBottom="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Product Title and SKU -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_alignParentStart="true">

                        <TextView
                            android:id="@+id/tvProductName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Carrara White Marble"
                            android:textColor="@color/primary_color"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:lineSpacingExtra="2dp" />

                        <TextView
                            android:id="@+id/tvProductSku"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SKU: FL-8821 â€¢ Porcelain"
                            android:textColor="@color/zinc_500"
                            android:textSize="14sp"
                            android:textStyle="normal"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <!-- Stock Status -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:orientation="horizontal"
                        android:background="@drawable/bg_stock_in"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="6dp">

                        <!-- Green Dot -->
                        <View
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_marginEnd="6dp"
                            android:background="@drawable/bg_green_dot" />

                        <TextView
                            android:id="@+id/tvStockStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="In Stock"
                            android:textColor="@color/emerald_700"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="20dp"
                android:background="@color/zinc_200" />

            <!-- Price Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Price Header -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <!-- Price Icon -->
                            <LinearLayout
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_marginEnd="8dp"
                                android:background="@drawable/bg_price_icon"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_payments"
                                    android:tint="@color/primary_color" />

                            </LinearLayout>

                            <!-- Price Label -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Unit Price"
                                android:textColor="@color/zinc_700"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <!-- View History Button -->
                        <TextView
                            android:id="@+id/tvViewHistory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="View History"
                            android:textColor="@color/primary_color"
                            android:textSize="12sp"
                            android:textStyle="normal"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:focusable="true"
                            android:paddingVertical="4dp"
                            android:paddingHorizontal="8dp" />

                    </RelativeLayout>

                    <!-- Price Value -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tvPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$45.00"
                            android:textColor="@color/primary_color"
                            android:textSize="36sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvPriceUnit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_marginBottom="8dp"
                            android:text="-sq/ft"
                            android:textColor="@color/zinc_500"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <!-- Price Details -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingTop="16dp"
                        android:background="@drawable/bg_divider_dashed">

                        <!-- Retail Price -->
                        <TextView
                            android:id="@+id/tvRetailPrice"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Retail Price: $55.00"
                            android:textColor="@color/zinc_500"
                            android:textSize="12sp" />

                        <!-- Margin -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_marginEnd="4dp"
                                android:src="@drawable/ic_trending_up"
                                android:tint="@color/emerald_600" />

                            <TextView
                                android:id="@+id/tvMargin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="18% Margin"
                                android:textColor="@color/emerald_600"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Stock and Warehouse Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical">

                <!-- Available Stock Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="AVAILABLE STOCK"
                            android:textColor="@color/zinc_500"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.5"
                            android:textAllCaps="true" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="8dp">

                            <TextView
                                android:id="@+id/tvStockQuantity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="120"
                                android:textColor="@color/primary_color"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvStockUnit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:text="Boxes"
                                android:textColor="@color/zinc_500"
                                android:textSize="12sp" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Warehouse Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="WAREHOUSE"
                            android:textColor="@color/zinc_500"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.5"
                            android:textAllCaps="true" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="8dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginEnd="8dp"
                                android:src="@drawable/ic_location"
                                android:tint="@color/zinc_400" />

                            <TextView
                                android:id="@+id/tvWarehouse"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Zone A"
                                android:textColor="@color/primary_color"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Specifications Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:paddingTop="24dp"
                android:paddingBottom="16dp">

                <!-- Section Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SPECIFICATIONS"
                    android:textColor="@color/primary_color"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.5"
                    android:layout_marginBottom="12dp"
                    android:textAllCaps="true" />

                <!-- Specifications Grid -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Row 1: Dimensions and Finish -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <!-- Dimensions -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="4dp"
                            android:orientation="horizontal"
                            android:background="@drawable/bg_spec_item"
                            android:gravity="center_vertical"
                            android:padding="12dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginEnd="12dp"
                                android:src="@drawable/ic_aspect_ratio"
                                android:tint="@color/zinc_400" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Dimensions"
                                    android:textColor="@color/zinc_500"
                                    android:textSize="10sp" />

                                <TextView
                                    android:id="@+id/tvDimensions"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="600 x 1200 mm"
                                    android:textColor="@color/primary_color"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="2dp" />

                            </LinearLayout>

                        </LinearLayout>

                        <!-- Finish -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="4dp"
                            android:orientation="horizontal"
                            android:background="@drawable/bg_spec_item"
                            android:gravity="center_vertical"
                            android:padding="12dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginEnd="12dp"
                                android:src="@drawable/ic_auto_awesome"
                                android:tint="@color/zinc_400" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Finish"
                                    android:textColor="@color/zinc_500"
                                    android:textSize="10sp" />

                                <TextView
                                    android:id="@+id/tvFinish"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="High Gloss"
                                    android:textColor="@color/primary_color"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="2dp" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Row 2: Thickness and Coverage -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Thickness -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="4dp"
                            android:orientation="horizontal"
                            android:background="@drawable/bg_spec_item"
                            android:gravity="center_vertical"
                            android:padding="12dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginEnd="12dp"
                                android:src="@drawable/ic_line_weight"
                                android:tint="@color/zinc_400" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Thickness"
                                    android:textColor="@color/zinc_500"
                                    android:textSize="10sp" />

                                <TextView
                                    android:id="@+id/tvThickness"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="9 mm"
                                    android:textColor="@color/primary_color"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="2dp" />

                            </LinearLayout>

                        </LinearLayout>

                        <!-- Coverage -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="4dp"
                            android:orientation="horizontal"
                            android:background="@drawable/bg_spec_item"
                            android:gravity="center_vertical"
                            android:padding="12dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginEnd="12dp"
                                android:src="@drawable/ic_grid_view"
                                android:tint="@color/zinc_400" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Coverage"
                                    android:textColor="@color/zinc_500"
                                    android:textSize="10sp" />

                                <TextView
                                    android:id="@+id/tvCoverage"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="1.44 sq. mt / box"
                                    android:textColor="@color/primary_color"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="2dp" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Description Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:paddingTop="8dp"
                android:paddingBottom="32dp">

                <!-- Section Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DESCRIPTION"
                    android:textColor="@color/primary_color"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.5"
                    android:layout_marginBottom="12dp"
                    android:textAllCaps="true" />

                <!-- Description Text -->
                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="The Carrara White Marble porcelain tile offers the timeless elegance of natural marble with the durability of porcelain. Featuring distinctive grey veining against a luminous white background, this tile brings sophistication to any interior space. Suitable for both residential and commercial high-traffic areas."
                    android:textColor="@color/zinc_600"
                    android:textSize="14sp"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Buttons -->
    <LinearLayout
        android:id="@+id/bottomButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@color/white"
        android:elevation="8dp"
        android:padding="16dp"
        android:paddingBottom="24dp">

        <!-- Edit Details Button -->
        <Button
            android:id="@+id/btnEditDetails"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginEnd="6dp"
            android:text="Edit Details"
            android:textColor="@color/calculator_surface"
            android:textSize="14sp"
            android:textStyle="bold"
            android:drawableStart="@drawable/ic_edit"
            android:drawablePadding="8dp"
            android:background="@drawable/bg_action_button_outline"
            android:gravity="center"
            android:stateListAnimator="@null" />

        <!-- Update Stock Button -->

    </LinearLayout>

</RelativeLayout>