<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardEnquiry"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="16dp"
    app:cardElevation="1dp"
    app:cardUseCompatPadding="true"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Row: Status & Time -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <!-- Status Badge -->
            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New"
                android:textSize="12sp"
                android:textStyle="normal"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_status_new"
                android:textColor="@color/primary_color" />

            <!-- Time Ago -->
            <TextView
                android:id="@+id/tvTimeAgo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2h ago"
                android:textSize="12sp"
                android:textColor="@color/zinc_500" />

        </LinearLayout>

        <!-- Content Row: Text + Image -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <!-- Text Content -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="12dp">

                <!-- Customer Name -->
                <TextView
                    android:id="@+id/tvCustomerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Michael Foster"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_color"
                    android:layout_marginBottom="4dp" />

                <!-- Enquiry Text -->
                <TextView
                    android:id="@+id/tvEnquiryText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hi, I'm looking for Italian Carrara marble tiles for my living room..."
                    android:textSize="14sp"
                    android:textColor="@color/zinc_600"
                    android:lineSpacingExtra="2dp"
                    android:maxLines="2"
                    android:ellipsize="end" />

            </LinearLayout>

            <!-- Tile Image -->
            <ImageView
                android:id="@+id/ivTileImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:background="@color/zinc_100"
                app:srcCompat="@drawable/tile_marble_sample"
                android:layout_gravity="center_vertical" />

        </LinearLayout>

        <!-- Action Row: Detail + Action Button -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/zinc_200"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Detail Info with Icon -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Detail Icon -->
                <ImageView
                    android:id="@+id/ivDetailIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_phone"
                    android:tint="@color/zinc_500"
                    android:layout_marginEnd="8dp" />

                <!-- Detail Text -->
                <TextView
                    android:id="@+id/tvDetailInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+1 (555) 123-4567"
                    android:textSize="14sp"
                    android:textColor="@color/zinc_600" />

            </LinearLayout>

            <!-- Action Button -->
            <TextView
                android:id="@+id/tvAction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Respond"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/primary_color"
                android:drawableEnd="@drawable/ic_arrow_forward"
                android:drawablePadding="4dp"
                android:paddingVertical="8dp"
                android:paddingHorizontal="12dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>