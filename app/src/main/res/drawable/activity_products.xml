                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingVertical="4dp">

                            <!-- Title and More Options -->
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp">

                                <!-- Product Title -->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Rustic Oak Plank"
                                    android:textColor="@color/primary_color"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:layout_alignParentStart="true" />

                                <!-- More Options Button -->
                                <ImageView
                                    android:id="@+id/moreOptions2"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_more_vert"
                                    android:tint="@color/zinc_400"
                                    android:background="?attr/selectableItemBackgroundBorderless"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:layout_alignParentEnd="true"
                                    android:padding="2dp" />

                            </RelativeLayout>

                            <!-- Product Type and Size -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ceramic • 200×1000mm"
                                android:textColor="@color/zinc_500"
                                android:textSize="12sp"
                                android:layout_marginBottom="8dp" />

                            <!-- Stock Status -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:background="@drawable/bg_stock_low"
                                android:paddingHorizontal="8dp"
                                android:paddingVertical="4dp"
                                android:layout_marginBottom="8dp">

                                <!-- Amber Dot -->
                                <View
                                    android:layout_width="6dp"
                                    android:layout_height="6dp"
                                    android:background="@drawable/bg_amber_dot"
                                    android:layout_marginEnd="6dp" />

                                <!-- Stock Text -->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Low Stock (12)"
                                    android:textColor="@color/amber_700"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <!-- Price -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₹45/sq.ft"
                                android:textColor="@color/primary_color"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Product 3: Urban Cement Grey -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/productCard3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp">

                        <!-- Product Image -->
                        <LinearLayout
                            android:layout_width="96dp"
                            android:layout_height="96dp"
                            android:background="@drawable/bg_product_image"
                            android:gravity="center"
                            android:layout_marginEnd="16dp">

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/ic_tile_placeholder"
                                android:tint="@color/zinc_300" />

                        </LinearLayout>

                        <!-- Product Details -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingVertical="4dp">

                            <!-- Title and More Options -->
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp">

                                <!-- Product Title -->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Urban Cement Grey"
                                    android:textColor="@color/primary_color"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:layout_alignParentStart="true" />

                                <!-- More Options Button -->
                                <ImageView
                                    android:id="@+id/moreOptions3"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_more_vert"
                                    android:tint="@color/zinc_400"
                                    android:background="?attr/selectableItemBackgroundBorderless"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:layout_alignParentEnd="true"
                                    android:padding="2dp" />

                            </RelativeLayout>

                            <!-- Product Type and Size -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Porcelain • 600×600mm"
                                android:textColor="@color/zinc_500"
                                android:textSize="12sp"
                                android:layout_marginBottom="8dp" />

                            <!-- Stock Status -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:background="@drawable/bg_stock_in"
                                android:paddingHorizontal="8dp"
                                android:paddingVertical="4dp"
                                android:layout_marginBottom="8dp">

                                <!-- Green Dot -->
                                <View
                                    android:layout_width="6dp"
                                    android:layout_height="6dp"
                                    android:background="@drawable/bg_green_dot"
                                    android:layout_marginEnd="6dp" />

                                <!-- Stock Text -->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="In Stock (820)"
                                    android:textColor="@color/emerald_700"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <!-- Price -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₹52/sq.ft"
                                android:textColor="@color/primary_color"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Product 4: Azure Mosaic -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/productCard4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="1dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp">

                        <!-- Product Image (Out of Stock) -->
                        <LinearLayout
                            android:layout_width="96dp"
                            android:layout_height="96dp"
                            android:background="@drawable/bg_product_image_out"
                            android:gravity="center"
                            android:layout_marginEnd="16dp">

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/ic_tile_placeholder"
                                android:tint="@color/zinc_200" />

                            <!-- Out of Stock Overlay -->
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#80FFFFFF"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:src="@drawable/ic_block"
                                    android:tint="@color/zinc_400" />

                            </View>

                        </LinearLayout>

                        <!-- Product Details -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingVertical="4dp">

                            <!-- Title and More Options -->
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp">

                                <!-- Product Title (Grayed out) -->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Azure Mosaic"
                                    android:textColor="@color/zinc_400"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:layout_alignParentStart="true" />

                                <!-- More Options Button (Grayed out) -->
                                <ImageView
                                    android:id="@+id/moreOptions4"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_more_vert"
                                    android:tint="@color/zinc_300"
                                    android:background="?attr/selectableItemBackgroundBorderless"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:layout_alignParentEnd="true"
                                    android:padding="2dp" />

                            </RelativeLayout>

                            <!-- Product Type and Size (Grayed out) -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Glass • 300×300mm"
                                android:textColor="@color/zinc_300"
                                android:textSize="12sp"
                                android:layout_marginBottom="8dp" />

                            <!-- Stock Status -->
